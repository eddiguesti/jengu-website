---
import BaseLayout from '../components/layout/BaseLayout.astro';
import { generateSEO } from '../lib/seo/metadata';
import { generateOrganizationSchema, generateBreadcrumbSchema } from '../lib/seo/jsonld';

const seo = generateSEO({
  title: 'About Jengu - AI Automation Experts for Tourism',
  description: 'We help tourism businesses automate operations with custom AI agents. Specializing in hospitality, travel agencies, DMCs & tour operators. Based in UK & Europe, serving clients worldwide.',
  canonical: `${Astro.site}about/`,
  ogType: 'website'
});

const jsonLd = [
  generateOrganizationSchema(),
  generateBreadcrumbSchema([
    { name: 'Home', url: Astro.site?.href || '' },
    { name: 'About', url: `${Astro.site}about/` }
  ])
];
---

<BaseLayout seo={seo} jsonLd={jsonLd}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <h1>About <span class="gradient-text">Jengu</span></h1>
      <p>
        We're on a mission to transform tourism and hospitality through intelligent AI automation, custom software development, and seamless API integrations.
      </p>
    </div>
  </section>

  <!-- Mission & Vision -->
  <section class="content-section bg-light">
    <div class="section-container">
      <div class="mission-vision-grid">
        <div class="mission-card">
          <div class="mission-card-icon">
            <i class="fas fa-bullseye"></i>
          </div>
          <h3>Our Mission</h3>
          <p>
            To empower tourism and hospitality businesses with cutting-edge AI agents, custom-built software, and intelligent automation that transforms operations, maximizes revenue, and creates exceptional guest experiences.
          </p>
        </div>
        <div class="mission-card">
          <div class="mission-card-icon">
            <i class="fas fa-eye"></i>
          </div>
          <h3>Our Vision</h3>
          <p>
            To be the leading provider of AI-powered solutions in the tourism industry, enabling every business—from boutique hotels to large resorts—to harness the power of artificial intelligence and automation.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Story -->
  <section class="content-section bg-main">
    <div class="section-container">
      <div class="section-header">
        <span class="section-badge">Our Story</span>
        <h2>How Jengu Was Born</h2>
        <p>
          Founded by a team of AI engineers and hospitality experts, Jengu emerged from a simple observation: tourism businesses spend countless hours on repetitive tasks that could be automated, preventing them from focusing on what truly matters—their guests.
        </p>
      </div>
      <div class="mission-card">
        <p style="font-size: 1.1rem; line-height: 1.9; color: var(--gray); margin-bottom: 1.5rem;">
          After years of building AI systems for Fortune 500 companies, we saw an opportunity to bring enterprise-level automation to the tourism industry. We realized that hotels, resorts, campsites, and travel agencies were drowning in emails, struggling with outdated booking systems, and missing revenue opportunities due to manual processes.
        </p>
        <p style="font-size: 1.1rem; line-height: 1.9; color: var(--gray);">
          Today, we build custom AI chatbots, phone bots, email automation systems, dynamic pricing engines, and complete API integrations that connect your entire tech stack. Every solution is tailored to your specific business needs, ensuring you get exactly what you need—nothing more, nothing less.
        </p>
      </div>
    </div>
  </section>

  <!-- Our Values -->
  <section class="content-section bg-light">
    <div class="section-container">
      <div class="section-header">
        <span class="section-badge">Our Values</span>
        <h2>What Drives Us</h2>
        <p>
          These core principles guide everything we do at Jengu
        </p>
      </div>
      <div class="values-grid">
        <div class="value-card">
          <div class="value-icon">
            <i class="fas fa-rocket"></i>
          </div>
          <h4>Innovation First</h4>
          <p>We leverage the latest AI technologies to build solutions that are years ahead of traditional software.</p>
        </div>
        <div class="value-card">
          <div class="value-icon">
            <i class="fas fa-users"></i>
          </div>
          <h4>Customer-Centric</h4>
          <p>Every solution is custom-built around your specific workflows, challenges, and business goals.</p>
        </div>
        <div class="value-card">
          <div class="value-icon">
            <i class="fas fa-shield-alt"></i>
          </div>
          <h4>Security & Privacy</h4>
          <p>Bank-level encryption, GDPR compliance, and enterprise security standards in every system we build.</p>
        </div>
        <div class="value-card">
          <div class="value-icon">
            <i class="fas fa-chart-line"></i>
          </div>
          <h4>Results Driven</h4>
          <p>We measure success by your ROI—time saved, revenue increased, and costs reduced.</p>
        </div>
        <div class="value-card">
          <div class="value-icon">
            <i class="fas fa-handshake"></i>
          </div>
          <h4>Long-Term Partnership</h4>
          <p>We provide ongoing support, training, and optimization to ensure your systems evolve with your business.</p>
        </div>
        <div class="value-card">
          <div class="value-icon">
            <i class="fas fa-lightbulb"></i>
          </div>
          <h4>Transparency</h4>
          <p>Clear pricing, honest timelines, and straightforward communication at every step of the process.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="content-section bg-main">
    <div class="section-container">
      <div class="section-header">
        <span class="section-badge">Impact & Growth</span>
        <h2>Jengu by the Numbers</h2>
      </div>
      <div class="stats-grid">
        <div class="stat-card">
          <span class="stat-number">500+</span>
          <span class="stat-label">Clients Worldwide</span>
        </div>
        <div class="stat-card">
          <span class="stat-number">£50M+</span>
          <span class="stat-label">Saved for Clients</span>
        </div>
        <div class="stat-card">
          <span class="stat-number">1M+</span>
          <span class="stat-label">Hours Automated</span>
        </div>
        <div class="stat-card">
          <span class="stat-number">98%</span>
          <span class="stat-label">Client Satisfaction</span>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="content-section bg-main">
    <div class="section-container">
      <div class="cta-box">
        <h2>Ready to Transform Your Business?</h2>
        <p>Calculate your potential ROI in just 2 minutes</p>
        <a href="#calculator" onclick="openCalculatorModal(); return false;" class="btn btn-primary">
          Calculate Your ROI <i class="fas fa-arrow-right"></i>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
