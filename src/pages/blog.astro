---
import BaseLayout from '../components/layout/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import CTASection from '../components/sections/CTASection.astro';
import { generateSEO } from '../lib/seo/metadata';
import { generateBreadcrumbSchema } from '../lib/seo/jsonld';

const seo = generateSEO({
  title: 'Blog & News - Latest AI Automation Insights | Jengu',
  description: 'Stay updated with the latest AI automation trends, case studies, and industry insights for tourism and hospitality businesses.',
  canonical: `${Astro.site}blog/`,
  ogType: 'website'
});

const jsonLd = [
  generateBreadcrumbSchema([
    { name: 'Home', url: Astro.site?.href || '' },
    { name: 'Blog', url: `${Astro.site}blog/` }
  ])
];

// Blog posts data - in a real app, this would come from a CMS or markdown files
const featuredPost = {
  title: 'The Future of AI in Hospitality: 2025 Trends',
  excerpt: 'As we move into 2025, artificial intelligence is revolutionizing the hospitality industry. From voice-activated room controls to predictive pricing algorithms, discover the key trends shaping the future of guest experiences.',
  date: '2025-01-15',
  category: 'Industry Insights',
  image: '/images/blog/featured.jpg',
  readTime: '8 min read'
};

const posts = [
  {
    title: 'How AI Chatbots Increased Booking Rates by 40%',
    excerpt: 'A deep dive into how one luxury resort implemented AI chatbots and saw dramatic improvements in conversion rates and guest satisfaction.',
    date: '2025-01-10',
    category: 'Case Study',
    image: '/images/blog/chatbot-case-study.jpg',
    readTime: '6 min read'
  },
  {
    title: 'Dynamic Pricing Strategies for Hotels in Peak Season',
    excerpt: 'Learn how machine learning algorithms can optimize your pricing strategy to maximize revenue during high-demand periods.',
    date: '2025-01-05',
    category: 'Revenue Management',
    image: '/images/blog/dynamic-pricing.jpg',
    readTime: '7 min read'
  },
  {
    title: 'Automating Guest Communications: Best Practices',
    excerpt: 'From booking confirmations to post-stay follow-ups, discover how to automate guest communications without losing the personal touch.',
    date: '2024-12-28',
    category: 'Automation',
    image: '/images/blog/guest-communications.jpg',
    readTime: '5 min read'
  },
  {
    title: 'Voice AI: The Next Frontier in Guest Services',
    excerpt: 'Explore how voice-activated AI assistants are transforming guest experiences and reducing staff workload in hotels worldwide.',
    date: '2024-12-20',
    category: 'Technology',
    image: '/images/blog/voice-ai.jpg',
    readTime: '6 min read'
  },
  {
    title: 'ROI Analysis: AI Implementation in Tour Operators',
    excerpt: 'A comprehensive look at the return on investment when implementing AI automation solutions for tour operators and DMCs.',
    date: '2024-12-15',
    category: 'Business',
    image: '/images/blog/roi-analysis.jpg',
    readTime: '9 min read'
  },
  {
    title: 'Email Automation That Converts: A Complete Guide',
    excerpt: 'Master the art of automated email marketing for tourism businesses with proven templates and conversion optimization techniques.',
    date: '2024-12-10',
    category: 'Marketing',
    image: '/images/blog/email-automation.jpg',
    readTime: '7 min read'
  }
];
---

<BaseLayout seo={seo} jsonLd={jsonLd}>
  <Hero
    title="AI Insights &"
    highlight="Industry News"
    description="Expert perspectives on AI automation, hospitality technology, and digital transformation in tourism"
  />

  <!-- Newspaper Header -->
  <section class="blog-header">
    <div class="newspaper-masthead">
      <div class="masthead-line"></div>
      <h2 class="masthead-title">The Jengu Times</h2>
      <div class="masthead-tagline">Where Innovation Meets Hospitality</div>
      <div class="masthead-line"></div>
    </div>
  </section>

  <!-- Featured Article (Above the Fold) -->
  <section class="featured-article">
    <div class="section-container">
      <div class="featured-grid">
        <div class="featured-content">
          <span class="article-category featured-category">{featuredPost.category}</span>
          <h2 class="featured-title">{featuredPost.title}</h2>
          <div class="article-meta">
            <time datetime={featuredPost.date}>
              {new Date(featuredPost.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
            </time>
            <span class="meta-separator">•</span>
            <span>{featuredPost.readTime}</span>
          </div>
          <p class="featured-excerpt">{featuredPost.excerpt}</p>
          <a href="#" class="read-more-btn">
            Read Full Article <i class="fas fa-arrow-right"></i>
          </a>
        </div>
        <div class="featured-image-container">
          <div class="featured-badge">Featured Story</div>
          <div class="featured-image"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Articles Grid -->
  <section class="articles-grid-section">
    <div class="section-container">
      <div class="section-divider">
        <span class="divider-text">Latest Articles</span>
      </div>

      <div class="articles-grid">
        {posts.map((post, index) => (
          <article class="article-card" style={`animation-delay: ${index * 0.1}s`}>
            <div class="article-image"></div>
            <div class="article-content">
              <span class="article-category">{post.category}</span>
              <h3 class="article-title">{post.title}</h3>
              <p class="article-excerpt">{post.excerpt}</p>
              <div class="article-footer">
                <time datetime={post.date}>
                  {new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </time>
                <span class="meta-separator">•</span>
                <span>{post.readTime}</span>
              </div>
              <a href="#" class="article-link">
                Continue Reading <i class="fas fa-arrow-right"></i>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="newsletter-section">
    <div class="section-container">
      <div class="newsletter-card">
        <div class="newsletter-icon">
          <i class="fas fa-newspaper"></i>
        </div>
        <h3>Subscribe to The Jengu Times</h3>
        <p>Get weekly insights on AI automation, industry trends, and exclusive case studies delivered to your inbox.</p>
        <form class="newsletter-form">
          <input type="email" placeholder="Enter your email address" class="newsletter-input" required>
          <button type="submit" class="newsletter-btn">
            Subscribe <i class="fas fa-paper-plane"></i>
          </button>
        </form>
        <p class="newsletter-note">No spam. Unsubscribe anytime.</p>
      </div>
    </div>
  </section>

  <CTASection
    title="Ready to Transform Your Business?"
    description="Calculate your ROI potential in just 2 minutes"
  />
</BaseLayout>

<style>
  /* Newspaper Masthead */
  .blog-header {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    padding: 3rem 0 2rem;
    border-bottom: 3px double var(--primary);
  }

  .newspaper-masthead {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .masthead-line {
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--primary), transparent);
    margin: 1rem 0;
  }

  .masthead-title {
    font-family: 'Sulphur Point', serif;
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--text-dark);
    margin: 0.5rem 0;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .masthead-tagline {
    font-family: 'Figtree', sans-serif;
    font-size: 1rem;
    font-style: italic;
    color: var(--gray);
    letter-spacing: 1px;
  }

  /* Featured Article */
  .featured-article {
    padding: 4rem 0;
    background: var(--bg-main);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .featured-category {
    background: linear-gradient(135deg, #ef4444, #dc2626);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .featured-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    line-height: 1.2;
    margin-bottom: 1rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--gray);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .meta-separator {
    color: var(--primary);
  }

  .featured-excerpt {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--gray);
    margin-bottom: 2rem;
    animation: fadeInUp 0.6s ease-out 0.2s backwards;
  }

  .read-more-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--primary), #0891b2);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease-out 0.4s backwards;
  }

  .read-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(6, 182, 212, 0.3);
  }

  .read-more-btn i {
    transition: transform 0.3s ease;
  }

  .read-more-btn:hover i {
    transform: translateX(5px);
  }

  .featured-image-container {
    position: relative;
    height: 500px;
    border-radius: 20px;
    overflow: hidden;
    animation: fadeInRight 0.8s ease-out 0.3s backwards;
  }

  .featured-badge {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: rgba(239, 68, 68, 0.95);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.85rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    z-index: 10;
    backdrop-filter: blur(10px);
  }

  .featured-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(8, 145, 178, 0.3)),
                url('/api/placeholder/800/600') center/cover;
    transition: transform 0.5s ease;
  }

  .featured-image-container:hover .featured-image {
    transform: scale(1.05);
  }

  /* Section Divider */
  .section-divider {
    text-align: center;
    margin: 3rem 0 2rem;
    position: relative;
  }

  .section-divider::before,
  .section-divider::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 40%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--primary), transparent);
  }

  .section-divider::before {
    left: 0;
  }

  .section-divider::after {
    right: 0;
  }

  .divider-text {
    background: var(--bg-light);
    padding: 0 2rem;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-dark);
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  /* Articles Grid */
  .articles-grid-section {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .article-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    animation: fadeInUp 0.6s ease-out backwards;
    border: 1px solid rgba(6, 182, 212, 0.1);
  }

  .article-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(6, 182, 212, 0.15);
  }

  .article-image {
    width: 100%;
    height: 220px;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(8, 145, 178, 0.2)),
                url('/api/placeholder/400/300') center/cover;
    transition: transform 0.5s ease;
  }

  .article-card:hover .article-image {
    transform: scale(1.1);
  }

  .article-content {
    padding: 1.5rem;
  }

  .article-category {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(8, 145, 178, 0.1));
    color: var(--primary);
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .article-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-dark);
    line-height: 1.4;
    margin-bottom: 0.75rem;
  }

  .article-excerpt {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--gray);
    margin-bottom: 1rem;
  }

  .article-footer {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--gray);
    font-size: 0.85rem;
    margin-bottom: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .article-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .article-link:hover {
    gap: 0.75rem;
  }

  .article-link i {
    transition: transform 0.3s ease;
  }

  .article-link:hover i {
    transform: translateX(3px);
  }

  /* Newsletter Section */
  .newsletter-section {
    padding: 4rem 0;
    background: var(--bg-main);
  }

  .newsletter-card {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.05), rgba(8, 145, 178, 0.05));
    border: 2px solid rgba(6, 182, 212, 0.2);
    border-radius: 24px;
    padding: 3rem;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    animation: fadeInUp 0.8s ease-out;
  }

  .newsletter-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--primary), #0891b2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }

  .newsletter-icon i {
    font-size: 2rem;
    color: white;
  }

  .newsletter-card h3 {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }

  .newsletter-card > p {
    font-size: 1.1rem;
    color: var(--gray);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto 1rem;
  }

  .newsletter-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: 2px solid rgba(6, 182, 212, 0.2);
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    color: white;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--primary);
    background: rgba(255, 255, 255, 0.08);
  }

  .newsletter-btn {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--primary), #0891b2);
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .newsletter-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(6, 182, 212, 0.3);
  }

  .newsletter-note {
    color: var(--gray);
    font-size: 0.85rem;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .masthead-title {
      font-size: 2.5rem;
    }

    .featured-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .featured-title {
      font-size: 2rem;
    }

    .featured-image-container {
      height: 300px;
      order: -1;
    }

    .articles-grid {
      grid-template-columns: 1fr;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-btn {
      justify-content: center;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
