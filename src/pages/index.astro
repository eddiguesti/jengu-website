---
import BaseLayout from '../components/layout/BaseLayout.astro';
import SplineScene from '../components/SplineScene.astro';
import { generateSEO } from '../lib/seo/metadata';
import { generateOrganizationSchema, generateWebSiteSchema } from '../lib/seo/jsonld';

const seo = generateSEO({
  title: 'AI Automation for Tourism & Hospitality',
  description: 'Transform your tourism business with custom AI agents. Automate bookings, customer support & operations. Boost conversions by 30%, save 40+ hours weekly. Free ROI calculator & consultation.',
  canonical: Astro.site?.href,
  ogType: 'website'
});

const jsonLd = [
  generateOrganizationSchema(),
  generateWebSiteSchema()
];
---

<BaseLayout seo={seo} jsonLd={jsonLd}>
  <!-- Preload Spline scene for faster loading -->
  <link
    slot="head"
    rel="preload"
    href="https://prod.spline.design/H0BsfAOW2BCmCUyJ/scene.splinecode"
    as="fetch"
    crossorigin="anonymous"
  />
  <section class="hero hero-home">
    <div class="hero-container">
      <div class="hero-content">
        <span class="hero-badge">
          <i class="fas fa-sparkles"></i>
          AI Automation for Tourism & Hospitality
        </span>

        <!-- Desktop headline -->
        <h1 class="desktop-only">
          Smart AI agents for Hospitality. <span class="gradient-text">Better operations, higher revenue.</span>
        </h1>

        <!-- Mobile headline - animated -->
        <h1 class="mobile-only mobile-hero-title">
          AI that runs<br/>your operations
        </h1>

        <!-- Desktop description -->
        <p class="hero-description desktop-only">
          Your unified automation system for tasks, communications, and guest experience.
        </p>

        <!-- Desktop CTAs -->
        <div class="hero-cta-group desktop-only">
          <button onclick="openBookingModal()" class="btn btn-primary btn-large btn-modern">
            <span>Get a Free Consultation</span>
          </button>
          <a href="/calculator" class="btn btn-secondary btn-large btn-modern" id="calc-btn">
            <span class="desktop-text">Free ROI Analysis</span><span class="mobile-text">ROI Analysis</span>
          </a>
        </div>
        <p class="hero-trust desktop-only">
          <i class="fas fa-check-circle"></i>
          No credit card • No commitment • Free consultation
        </p>
      </div>


      <!-- Desktop only: Spline 3D Robot -->
      <div class="hero-visual desktop-only">
        <div class="spline-container" role="img" aria-label="Interactive 3D robot animation">
          <SplineScene />
        </div>
      </div>

    </div>

    <!-- Mobile only: Fullscreen Video Hero -->
    <div class="mobile-only video-bg">
      <video autoplay muted playsinline loop id="bg-video" preload="metadata" poster="/images/mobile-hero-poster.jpg">
        <source src="/videos/mobile-hero.mp4" type="video/mp4">
      </video>
      <script is:inline>
        // Start video at 7 seconds for instant visual impact
        const bgVideo = document.getElementById('bg-video');
        if (bgVideo) {
          bgVideo.addEventListener('loadedmetadata', function() {
            bgVideo.currentTime = 7;
          });
        }
      </script>

      <!-- Gradient overlay -->
      <div class="mobile-hero-gradient"></div>

      <!-- Content overlay -->
      <div class="mobile-hero-overlay">
        <h1 class="mobile-hero-headline">
          AI that runs<br/>your operations
        </h1>
        <div class="mobile-subhead">Built for Hospitality. Designed to increase revenue and reduce manual work.</div>
        <div class="mobile-hero-actions">
          <button onclick="openBookingModal()" class="mobile-hero-btn mobile-hero-btn-primary">
            Free Consultation
          </button>
          <a href="/calculator" class="mobile-hero-btn mobile-hero-btn-secondary">
            Free ROI Analysis
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Promo Video Section - GitHub Style -->
  <section class="promo-video-section">
    <div class="promo-container">
      <div class="promo-video">
        <div class="video-wrapper">
          <video
            autoplay
            muted
            loop
            playsinline
            preload="metadata"
            loading="lazy"
          >
            <source src="/videos/finalpromo.mp4" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
      <div class="promo-content">
        <h2>How We Work</h2>
        <p>Our AI automation process transforms your hospitality operations through intelligent workflow design and seamless integration.</p>

        <div class="process-flow">
          <div class="process-step">
            <div class="step-icon">
              <i class="fas fa-lightbulb"></i>
            </div>
            <div class="step-content">
              <h3>1. Discover</h3>
              <p>We analyze your operations and identify automation opportunities</p>
            </div>
          </div>

          <div class="flow-connector">
            <div class="connector-line"></div>
            <div class="flow-particles">
              <div class="particle"></div>
              <div class="particle"></div>
              <div class="particle"></div>
            </div>
          </div>

          <div class="process-step">
            <div class="step-icon">
              <i class="fas fa-project-diagram"></i>
            </div>
            <div class="step-content">
              <h3>2. Process Map</h3>
              <p>Map your workflows to uncover hidden inefficiencies (if needed)</p>
            </div>
          </div>

          <div class="flow-connector">
            <div class="connector-line"></div>
            <div class="flow-particles">
              <div class="particle"></div>
              <div class="particle"></div>
              <div class="particle"></div>
            </div>
          </div>

          <div class="process-step">
            <div class="step-icon">
              <i class="fas fa-rocket"></i>
            </div>
            <div class="step-content">
              <h3>3. Deploy</h3>
              <p>Custom AI agents seamlessly integrated with your systems</p>
            </div>
          </div>

          <div class="flow-connector">
            <div class="connector-line"></div>
            <div class="flow-particles">
              <div class="particle"></div>
              <div class="particle"></div>
              <div class="particle"></div>
            </div>
          </div>

          <div class="process-step">
            <div class="step-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <div class="step-content">
              <h3>4. Optimize</h3>
              <p>Continuous improvement and performance monitoring</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <div class="stats-container">
      <div class="stat-card animate-on-scroll">
        <span class="stat-number">Up to 30%</span>
        <span class="stat-label">Booking Conversion Increase</span>
      </div>
      <div class="stat-card animate-on-scroll" style="transition-delay: 0.1s;">
        <span class="stat-number">80%</span>
        <span class="stat-label">Customer Inquiries Automated</span>
      </div>
      <div class="stat-card animate-on-scroll" style="transition-delay: 0.2s;">
        <span class="stat-number">Seconds</span>
        <span class="stat-label">Response Time (vs. 15-20 min)</span>
      </div>
    </div>
  </section>

  <!-- Process Mapping Section -->
  <section class="process-mapping-section">
    <div class="process-mapping-container">
      <div class="process-mapping-content">
        <span class="section-badge">
          <i class="fas fa-project-diagram"></i>
          The Foundation of Automation
        </span>
        <h2>Process Mapping: See What You're Missing</h2>
        <p class="section-intro">
          Before automation, we map your processes. Most businesses discover inefficiencies they never knew existed—duplicate work, bottlenecks, and wasted time that's costing thousands every month.
        </p>

        <div class="mapping-benefits">
          <div class="benefit-item">
            <div class="benefit-icon">
              <i class="fas fa-eye"></i>
            </div>
            <div class="benefit-text">
              <h4>Uncover Hidden Inefficiencies</h4>
              <p>See exactly where time and money are being wasted in your operations</p>
            </div>
          </div>

          <div class="benefit-item">
            <div class="benefit-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <div class="benefit-text">
              <h4>Identify Quick Wins</h4>
              <p>Find automation opportunities that deliver ROI within weeks, not months</p>
            </div>
          </div>

          <div class="benefit-item">
            <div class="benefit-icon">
              <i class="fas fa-bullseye"></i>
            </div>
            <div class="benefit-text">
              <h4>Prioritize What Matters</h4>
              <p>Focus on automations that will have the biggest impact on your bottom line</p>
            </div>
          </div>
        </div>
      </div>

      <div class="process-mapping-visual">
        <div class="mapping-flow">
          <!-- Before State -->
          <div class="flow-state before-state">
            <div class="state-label">Before Process Mapping</div>
            <div class="chaotic-flow">
              <div class="task-node chaos">
                <i class="fas fa-envelope"></i>
                <span>Manual Emails</span>
              </div>
              <div class="task-node chaos">
                <i class="fas fa-file-alt"></i>
                <span>Spreadsheets</span>
              </div>
              <div class="task-node chaos">
                <i class="fas fa-phone"></i>
                <span>Phone Calls</span>
              </div>
              <div class="task-node chaos">
                <i class="fas fa-clipboard"></i>
                <span>Manual Checks</span>
              </div>
              <div class="task-node chaos">
                <i class="fas fa-redo"></i>
                <span>Duplicate Work</span>
              </div>
              <div class="task-node chaos">
                <i class="fas fa-clock"></i>
                <span>Delays</span>
              </div>
              <!-- Chaotic connection lines -->
              <svg class="chaos-lines" viewBox="0 0 300 200">
                <path d="M 50 50 Q 150 30 250 80" stroke="rgba(239, 68, 68, 0.3)" stroke-width="2" fill="none" />
                <path d="M 80 120 Q 150 90 220 140" stroke="rgba(239, 68, 68, 0.3)" stroke-width="2" fill="none" />
                <path d="M 100 40 Q 120 100 180 60" stroke="rgba(239, 68, 68, 0.3)" stroke-width="2" fill="none" />
                <path d="M 60 160 Q 180 120 240 100" stroke="rgba(239, 68, 68, 0.3)" stroke-width="2" fill="none" />
              </svg>
            </div>
            <div class="state-metrics bad">
              <div class="metric">
                <i class="fas fa-exclamation-triangle"></i>
                <span>30+ hrs/week wasted</span>
              </div>
            </div>
          </div>

          <!-- Arrow -->
          <div class="transformation-arrow">
            <i class="fas fa-arrow-right"></i>
            <span>Process Mapping Reveals</span>
          </div>

          <!-- After State -->
          <div class="flow-state after-state">
            <div class="state-label">After Process Mapping</div>
            <div class="optimized-flow">
              <div class="task-node optimized start">
                <i class="fas fa-flag"></i>
                <span>Start</span>
              </div>
              <div class="flow-arrow">→</div>
              <div class="task-node optimized">
                <i class="fas fa-robot"></i>
                <span>AI Agent</span>
              </div>
              <div class="flow-arrow">→</div>
              <div class="task-node optimized">
                <i class="fas fa-check-circle"></i>
                <span>Automated</span>
              </div>
              <div class="flow-arrow">→</div>
              <div class="task-node optimized end">
                <i class="fas fa-trophy"></i>
                <span>Done</span>
              </div>
            </div>
            <div class="state-metrics good">
              <div class="metric">
                <i class="fas fa-check-circle"></i>
                <span>5 hrs/week saved</span>
              </div>
            </div>
          </div>
        </div>

        <div class="mapping-cta">
          <div class="mapping-cta-buttons">
            <button onclick="openBookingModal()" class="mapping-btn primary">
              Book a Free Consultation
            </button>
            <a href="/calculator" class="mapping-btn secondary">
              <i class="fas fa-calculator"></i>
              Calculate My Savings
            </a>
          </div>
          <p class="cta-subtext">Discover where AI can transform your operations · No commitment required</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features">
    <div class="section-header">
      <span class="section-badge">
        <i class="fas fa-rocket"></i>
        What We Build
      </span>
      <h2>AI Solutions That Actually Work for Tourism</h2>
      <p>Custom AI agents, integrations, and automation—built specifically for hotels, tour operators, and travel businesses</p>
    </div>
    <div class="features-grid-new">
      <div class="feature-card-new animate-on-scroll">
        <div class="feature-header">
          <div class="feature-icon-new">
            <i class="fas fa-comments"></i>
          </div>
          <h3>AI Guest Communication</h3>
        </div>
        <p>Handle guest emails, WhatsApp, and live chat automatically. Your AI responds instantly in 40+ languages.</p>
        <ul class="feature-benefits">
          <li><i class="fas fa-check"></i> Instant 24/7 responses</li>
          <li><i class="fas fa-check"></i> 80% inquiries automated</li>
          <li><i class="fas fa-check"></i> Multi-language support</li>
        </ul>
        <a href="/case-studies" class="feature-learn-more">
          See Results
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

      <div class="feature-card-new animate-on-scroll">
        <div class="feature-header">
          <div class="feature-icon-new">
            <i class="fas fa-phone-volume"></i>
          </div>
          <h3>AI Voice & Booking Bots</h3>
        </div>
        <p>Phone bots and chatbots that take reservations, answer questions, and process payments while you sleep.</p>
        <ul class="feature-benefits">
          <li><i class="fas fa-check"></i> 24/7 phone answering</li>
          <li><i class="fas fa-check"></i> Direct booking integration</li>
          <li><i class="fas fa-check"></i> Payment processing</li>
        </ul>
        <a href="/case-studies" class="feature-learn-more">
          See Case Studies
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

      <div class="feature-card-new animate-on-scroll">
        <div class="feature-header">
          <div class="feature-icon-new">
            <i class="fas fa-chart-line"></i>
          </div>
          <h3>Dynamic Pricing Engine</h3>
        </div>
        <p>Maximize revenue with AI-powered pricing that adjusts rates based on demand, seasons, and competition.</p>
        <ul class="feature-benefits">
          <li><i class="fas fa-check"></i> Real-time rate optimization</li>
          <li><i class="fas fa-check"></i> Competitor monitoring</li>
          <li><i class="fas fa-check"></i> Revenue dashboards</li>
        </ul>
        <a href="/dynamic-pricing" class="feature-learn-more">
          See Dynamic Pricing
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

      <div class="feature-card-new animate-on-scroll">
        <div class="feature-header">
          <div class="feature-icon-new">
            <i class="fas fa-plug"></i>
          </div>
          <h3>System Integrations</h3>
        </div>
        <p>Connect your PMS, booking engine, CRM, and payment systems. Eliminate manual data entry forever.</p>
        <ul class="feature-benefits">
          <li><i class="fas fa-check"></i> PMS & channel managers</li>
          <li><i class="fas fa-check"></i> Automated workflows</li>
          <li><i class="fas fa-check"></i> Real-time data sync</li>
        </ul>
        <a href="/services" class="feature-learn-more">
          View Services
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

      <div class="feature-card-new animate-on-scroll">
        <div class="feature-header">
          <div class="feature-icon-new">
            <i class="fas fa-calculator"></i>
          </div>
          <h3>ROI Calculator</h3>
        </div>
        <p>See exactly how much time and money you could save. Get a personalized automation ROI in 2 minutes.</p>
        <ul class="feature-benefits">
          <li><i class="fas fa-check"></i> Free instant analysis</li>
          <li><i class="fas fa-check"></i> No signup required</li>
          <li><i class="fas fa-check"></i> Personalized results</li>
        </ul>
        <a href="/calculator" class="feature-learn-more">
          Calculate Savings
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

      <div class="feature-card-new animate-on-scroll">
        <div class="feature-header">
          <div class="feature-icon-new">
            <i class="fas fa-handshake"></i>
          </div>
          <h3>Free Consultation</h3>
        </div>
        <p>Talk to our team about your automation needs. Get expert advice and a custom solution roadmap—no obligation.</p>
        <ul class="feature-benefits">
          <li><i class="fas fa-check"></i> 30-min strategy call</li>
          <li><i class="fas fa-check"></i> Custom recommendations</li>
          <li><i class="fas fa-check"></i> No commitment</li>
        </ul>
        <button class="feature-learn-more" onclick="openBookingModal()">
          Book Free Call
          <i class="fas fa-arrow-right"></i>
        </button>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="benefits">
    <div class="benefits-container">
      <div class="benefits-content animate-on-scroll">
        <span class="section-badge">Measurable Results</span>
        <h2>How AI Agents Transform Tourism Operations</h2>
        <p style="color: var(--text-secondary); margin-bottom: 2rem;">
          We build custom AI agents, integrate your systems, and automate workflows. Tourism businesses using AI automation see immediate, measurable improvements:
        </p>
        <ul class="benefits-list">
          <li class="benefit-item">
            <div class="benefit-icon">
              <i class="fas fa-clock"></i>
            </div>
            <div class="benefit-text">
              <h4>40+ Hours Saved Weekly</h4>
              <p>AI agents handle 80% of routine guest inquiries automatically—booking questions, FAQs, confirmations, and support requests—freeing your team to focus on complex needs and guest experience</p>
            </div>
          </li>
          <li class="benefit-item">
            <div class="benefit-icon">
              <i class="fas fa-pound-sign"></i>
            </div>
            <div class="benefit-text">
              <h4>Up to 30% More Bookings</h4>
              <p>AI booking agents provide instant responses 24/7 across all channels—web, WhatsApp, phone—capturing opportunities that would otherwise be lost to slow response times or after-hours inquiries</p>
            </div>
          </li>
          <li class="benefit-item">
            <div class="benefit-icon">
              <i class="fas fa-smile"></i>
            </div>
            <div class="benefit-text">
              <h4>Response Time: Seconds Not Hours</h4>
              <p>Custom AI chatbots and phone bots answer guest questions instantly instead of the typical 15-20 minute wait—improving satisfaction while reducing call volumes by over 40%</p>
            </div>
          </li>
          <li class="benefit-item">
            <div class="benefit-icon">
              <i class="fas fa-trophy"></i>
            </div>
            <div class="benefit-text">
              <h4>ROI in 3-4 Months</h4>
              <p>Most tourism businesses see 300-500% ROI within their first year from reduced labor costs, increased bookings, and operational efficiency gains</p>
            </div>
          </li>
        </ul>
      </div>
      <div class="benefits-visual animate-on-scroll">
        <div class="roi-preview" id="roiPreview">
          <h3>Typical Client Results</h3>
          <div class="roi-metric">
            <div class="roi-label">
              <span>Labor Cost Savings</span>
              <span><strong>£85,000/year</strong></span>
            </div>
            <div class="roi-bar">
              <div class="roi-fill" style="--width: 85%;"></div>
            </div>
          </div>
          <div class="roi-metric">
            <div class="roi-label">
              <span>Revenue Increase</span>
              <span><strong>£65,000/year</strong></span>
            </div>
            <div class="roi-bar">
              <div class="roi-fill" style="--width: 65%;"></div>
            </div>
          </div>
          <div class="roi-metric">
            <div class="roi-label">
              <span>Conversion Boost</span>
              <span><strong>£45,000/year</strong></span>
            </div>
            <div class="roi-bar">
              <div class="roi-fill" style="--width: 45%;"></div>
            </div>
          </div>
          <div style="margin-top: 2rem; padding-top: 2rem; border-top: 2px solid #f0f0f0;">
            <div class="roi-label" style="margin-bottom: 0;">
              <span style="font-weight: 700; color: var(--text-primary); font-size: 1.1rem;">Total Annual Benefit</span>
              <span style="font-weight: 900; color: var(--primary-cta); font-size: 1.5rem;">£195,000</span>
            </div>
          </div>
          <div class="roi-cta">
            <a href="/calculator" class="roi-cta-btn">
              <i class="fas fa-calculator"></i>
              Calculate Your Savings
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Calculator Section -->
  <section class="cta-calculator" id="calculator">
    <div class="cta-content">
      <h2>
        Calculate <span class="gradient-text">Your Automation ROI</span>
      </h2>
      <p>
        See how much time and money your tourism business could save with AI agents and automation. Get your personalized ROI calculation in 2 minutes—no signup required.
      </p>
      <a href="/calculator" class="cta-btn-large">
        <i class="fas fa-calculator"></i>
        Get Free Analysis
      </a>
      <p style="margin-top: 2rem; font-size: 0.95rem; opacity: 0.7;">
        No signup required • Takes 2 minutes • Instant results
      </p>
    </div>
  </section>

  <!-- Social Proof -->
  <section class="social-proof">
    <div class="section-header">
      <span class="section-badge">Tourism & Hospitality Specialists</span>
      <h2>Why Tourism Businesses Choose Jengu</h2>
    </div>
    <div class="trust-badges">
      <div class="trust-badge animate-on-scroll">
        <div class="trust-icon">
          <i class="fas fa-code"></i>
        </div>
        <h4>Custom Built</h4>
        <p>Every solution is tailored specifically to your business - no generic templates or one-size-fits-all packages</p>
      </div>
      <div class="trust-badge animate-on-scroll" style="transition-delay: 0.1s;">
        <div class="trust-icon">
          <i class="fas fa-rocket"></i>
        </div>
        <h4>Fast Deployment</h4>
        <p>From consultation to live deployment in 2-6 weeks - get results quickly without lengthy enterprise sales cycles</p>
      </div>
      <div class="trust-badge animate-on-scroll" style="transition-delay: 0.2s;">
        <div class="trust-icon">
          <i class="fas fa-handshake"></i>
        </div>
        <h4>Transparent Pricing</h4>
        <p>Clear project quotes with no hidden fees - know exactly what you're paying for before we start</p>
      </div>
      <div class="trust-badge animate-on-scroll" style="transition-delay: 0.3s;">
        <div class="trust-icon">
          <i class="fas fa-lock"></i>
        </div>
        <h4>GDPR Compliant</h4>
        <p>Full compliance with UK and EU data protection regulations built into every solution</p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="section-container">
      <div class="section-header">
        <span class="section-badge">Common Questions</span>
        <h2>Frequently Asked Questions About AI Automation</h2>
        <p>Everything you need to know about implementing AI agents and automation for your tourism business</p>
      </div>

      <div class="faq-grid">
        <div class="faq-item">
          <button class="faq-question-home" onclick="toggleHomeFAQ(this)">
            <span>What is an AI agent for tourism businesses?</span>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div class="faq-answer-home">
            <p>An AI agent is custom software that uses artificial intelligence to handle specific tasks automatically—like answering booking inquiries, processing reservations, managing customer support, or syncing data between your systems. Unlike generic chatbots, Jengu's AI agents are built specifically for your tourism business, trained on your services, policies, and guest data to provide accurate, personalized responses 24/7.</p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question-home" onclick="toggleHomeFAQ(this)">
            <span>Which types of tourism companies does Jengu work with?</span>
