  <script>
    // Calculator state
    let currentStep = 1;
    const answers = {
      industry: null,
      employees: null,
      interactions: null
    };

    // Generate floating particles
    function createParticles() {
      const particles = document.getElementById('particles');
      for (let i = 0; i < 30; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.animationDelay = Math.random() * 15 + 's';
        particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
        particles.appendChild(particle);
      }
    }

    // Initialize
    createParticles();

    // Choice selection
    function selectChoice(btn, key) {
      // Remove selected from siblings
      const siblings = btn.parentElement.querySelectorAll('.choice-btn');
      siblings.forEach(s => s.classList.remove('selected'));

      // Add selected to this button
      btn.classList.add('selected');

      // Store answer
      answers[key] = btn.dataset.value;

      // Enable next button
      document.getElementById('next1').disabled = false;
    }

    // Validate employees input
    function validateEmployees() {
      const input = document.getElementById('employees');
      const value = parseInt(input.value);
      answers.employees = value;
      document.getElementById('next2').disabled = !value || value < 1;
    }

    // Validate interactions input
    function validateInteractions() {
      const input = document.getElementById('interactions');
      const value = parseInt(input.value);
      answers.interactions = value;
      document.getElementById('next3').disabled = !value || value < 1;
    }

    // Navigate questions
    function nextQuestion() {
      // Hide current
      document.getElementById('q' + currentStep).classList.remove('active');

      // Update step
      document.querySelectorAll('.step')[currentStep - 1].classList.add('completed');
      document.querySelectorAll('.step')[currentStep - 1].classList.remove('active');

      currentStep++;

      // Show next
      document.getElementById('q' + currentStep).classList.add('active');
      document.querySelectorAll('.step')[currentStep - 1].classList.add('active');

      // Scroll to top smoothly
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function prevQuestion() {
      // Hide current
      document.getElementById('q' + currentStep).classList.remove('active');

      // Update step
      document.querySelectorAll('.step')[currentStep - 1].classList.remove('active');

      currentStep--;

      // Show previous
      document.getElementById('q' + currentStep).classList.add('active');
      document.querySelectorAll('.step')[currentStep - 1].classList.remove('completed');
      document.querySelectorAll('.step')[currentStep - 1].classList.add('active');

      // Scroll to top smoothly
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // Calculate ROI
    function calculateROI() {
      const { employees, interactions } = answers;

      // Simple calculation logic (customize as needed)
      const avgTimePerInteraction = 5; // minutes
      const hourlyRate = 25; // dollars
      const automationRate = 0.7; // 70% of tasks can be automated
      const workingDaysPerMonth = 22;
      const monthsPerYear = 12;

      // Time saved per month (in hours)
      const minutesSavedPerDay = interactions * avgTimePerInteraction * automationRate;
      const hoursSavedPerMonth = (minutesSavedPerDay / 60) * workingDaysPerMonth;

      // Money saved per year
      const moneySavedPerMonth = hoursSavedPerMonth * hourlyRate;
      const moneySavedPerYear = moneySavedPerMonth * monthsPerYear;

      // Efficiency gain
      const efficiencyGain = Math.round(automationRate * 100);

      // Hide current question
      document.getElementById('q3').classList.remove('active');
      document.querySelectorAll('.step')[2].classList.add('completed');
      document.querySelectorAll('.step')[2].classList.remove('active');
      document.querySelectorAll('.step')[3].classList.add('active');

      // Show results with animation
      document.getElementById('results').classList.add('active');

      // Animate numbers
      animateValue('moneySaved', 0, Math.round(moneySavedPerYear), 1500, '$');
      animateValue('timeSaved', 0, Math.round(hoursSavedPerMonth), 1500, '');
      animateValue('efficiency', 0, efficiencyGain, 1500, '%');

      // Scroll to top
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // Animate number counting
    function animateValue(id, start, end, duration, suffix = '') {
      const element = document.getElementById(id);
      const range = end - start;
      const increment = range / (duration / 16);
      let current = start;

      const timer = setInterval(() => {
        current += increment;
        if (current >= end) {
          current = end;
          clearInterval(timer);
        }

        if (suffix === '$') {
          element.textContent = '$' + Math.round(current).toLocaleString();
        } else if (suffix === '%') {
          element.textContent = Math.round(current) + '%';
        } else {
          element.textContent = Math.round(current).toLocaleString();
        }
      }, 16);
    }
  </script>
