        </div>
      </div>

      <!-- Deferred Spline Viewer Loading -->
      <script>
        // Load Spline viewer only when browser is idle to prevent blocking
        function loadSplineViewer() {
          const script = document.createElement('script');
          script.type = 'module';
          script.src = 'https://unpkg.com/@splinetool/viewer@1.9.28/build/spline-viewer.js';
          document.head.appendChild(script);

          // Show Spline when it's actually loaded
          script.onload = () => {
            setTimeout(() => {
              const container = document.querySelector('.spline-container');
              const viewer = document.querySelector('spline-viewer');

              if (viewer && container) {
                // Check if canvas is ready
                const checkCanvas = setInterval(() => {
                  const canvas = viewer.shadowRoot?.querySelector('canvas');
                  if (canvas && canvas.width > 0) {
                    clearInterval(checkCanvas);
                    container.classList.add('loaded');
                  }
                }, 100);

                // Fallback: show after 3 seconds regardless
                setTimeout(() => {
                  container.classList.add('loaded');
                  clearInterval(checkCanvas);
                }, 3000);
              }
            }, 100);
          };
        }

        if ('requestIdleCallback' in window) {
          requestIdleCallback(loadSplineViewer, { timeout: 2000 });
        } else {
          setTimeout(loadSplineViewer, 1000);
        }
      </script>
