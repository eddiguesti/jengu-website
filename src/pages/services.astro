---
import BaseLayout from '../components/layout/BaseLayout.astro';
import { generateSEO } from '../lib/seo/metadata';
import { generateOrganizationSchema, generateBreadcrumbSchema } from '../lib/seo/jsonld';

const seo = generateSEO({
  title: 'AI Automation Services for Tourism & Hospitality | Jengu',
  description: 'AI booking agents, customer service automation, workflow integrations, and custom software for hotels, tour operators, and travel agencies. See how we automate tourism operations.',
  canonical: `${Astro.site}services/`,
  ogType: 'website'
});

const jsonLd = [
  generateOrganizationSchema(),
  generateBreadcrumbSchema([
    { name: 'Home', url: Astro.site?.href || '' },
    { name: 'Services', url: `${Astro.site}services/` }
  ])
];
---

<BaseLayout seo={seo} jsonLd={jsonLd}>
  <!-- Hero -->
  <section class="hero">
    <div class="hero-container">
      <h1>AI Automation <span class="gradient-text">Services</span> for Tourism Businesses</h1>
      <p>
        We build custom AI agents, integrate your systems, and automate workflows—so you can focus on guests, not repetitive tasks
      </p>
    </div>
  </section>

  <!-- Main Services -->
  <section class="services-section">
    <div class="section-container">
      <div class="section-header">
        <span class="section-badge">What We Build</span>
        <h2>Custom AI & Automation Solutions</h2>
        <p>Tailored technology that solves your specific business challenges</p>
      </div>

      <div class="services-grid">
        <!-- AI Booking & Inquiry Agents -->
        <div class="service-card">
          <div class="service-icon">
            <i class="fas fa-robot"></i>
          </div>
          <h3>AI Booking & Inquiry Agents</h3>
          <p>Custom AI chatbots and phone bots that handle reservations, answer questions, and provide 24/7 guest support across all channels.</p>
          <ul class="service-features">
            <li>Automated booking assistance with real-time availability</li>
            <li>Multi-language support (40+ languages)</li>
            <li>24/7 availability across web, WhatsApp, phone, SMS</li>
            <li>Instant responses to availability and pricing questions</li>
            <li>Automated confirmations, reminders, and follow-ups</li>
          </ul>
          <p class="service-outcome"><strong>Outcome:</strong> Up to 30% more bookings, 80% of inquiries handled automatically</p>
          <a href="/contact" class="service-cta">Learn More →</a>
        </div>

        <!-- Customer Support & FAQ Automation -->
        <div class="service-card">
          <div class="service-icon">
            <i class="fas fa-headset"></i>
          </div>
          <h3>Customer Support & FAQ Automation</h3>
          <p>AI-powered systems that answer common questions, handle email inquiries, and route complex issues to human agents automatically.</p>
          <ul class="service-features">
            <li>AI chatbots trained on your FAQs and policies</li>
            <li>Automated email response systems</li>
            <li>Multi-channel support (website, WhatsApp, SMS, phone)</li>
            <li>Smart routing to human agents when needed</li>
            <li>Sentiment analysis for urgent or negative issues</li>
          </ul>
          <p class="service-outcome"><strong>Outcome:</strong> Response time reduced from hours to seconds, 40% lower call volumes</p>
          <a href="/contact" class="service-cta">Learn More →</a>
        </div>

        <!-- Workflow & Back-Office Automation -->
        <div class="service-card">
          <div class="service-icon">
            <i class="fas fa-network-wired"></i>
          </div>
          <h3>Workflow & Back-Office Automation</h3>
          <p>API integrations and custom software that sync your systems, eliminate manual data entry, and streamline operations management.</p>
          <ul class="service-features">
            <li>API integrations with PMS, CRM, booking engines</li>
            <li>Automated data sync across all systems</li>
            <li>Custom software for operations management</li>
            <li>Dynamic pricing engines with AI optimization</li>
            <li>Inventory and resource management automation</li>
          </ul>
          <p class="service-outcome"><strong>Outcome:</strong> 40+ hours saved weekly, eliminate manual data entry errors</p>
          <a href="/contact" class="service-cta">Learn More →</a>
        </div>

        <!-- Multi-Channel Communication Automation -->
        <div class="service-card">
          <div class="service-icon">
            <i class="fas fa-envelope"></i>
          </div>
          <h3>Multi-Channel Communication Automation</h3>
          <p>Unified systems that manage email, WhatsApp, SMS, and all guest communications with automated workflows and personalized sequences.</p>
          <ul class="service-features">
            <li>Unified inbox for all communication channels</li>
            <li>Automated email sequences and drip campaigns</li>
            <li>Booking confirmation and reminder workflows</li>
            <li>Pre-arrival and post-stay communications</li>
            <li>Review request automation and follow-ups</li>
          </ul>
          <p class="service-outcome"><strong>Outcome:</strong> Consistent communication, improved guest satisfaction scores</p>
          <a href="/contact" class="service-cta">Learn More →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Services -->
  <section class="services-section" style="background: var(--bg-main); padding-top: 0;">
    <div class="section-container">
      <div class="services-grid">
        <!-- Process Mapping -->
        <div class="service-card">
          <div class="service-icon">
            <i class="fas fa-project-diagram"></i>
          </div>
          <h3>Process Mapping & Optimization</h3>
          <p>Clear visualization of your workflows to identify inefficiencies and automation opportunities.</p>
          <ul class="service-features">
            <li>Complete workflow documentation</li>
            <li>Bottleneck identification and analysis</li>
            <li>Automation opportunity assessment</li>
            <li>ROI calculation for improvements</li>
            <li>Implementation roadmap creation</li>
          </ul>
          <a href="/contact" class="service-cta">Learn More →</a>
        </div>

        <!-- Training & Support -->
        <div class="service-card">
          <div class="service-icon">
            <i class="fas fa-graduation-cap"></i>
          </div>
          <h3>Training & Ongoing Support</h3>
          <p>Comprehensive onboarding and continuous support to ensure your team masters every system we build.</p>
          <ul class="service-features">
            <li>Hands-on training for all staff levels</li>
            <li>Custom documentation and video tutorials</li>
            <li>Dedicated support team during business hours</li>
            <li>Regular system optimization reviews</li>
            <li>Feature updates and enhancements</li>
          </ul>
          <a href="/contact" class="service-cta">Learn More →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process-section">
    <div class="section-container">
      <div class="section-header">
        <span class="section-badge">How We Work</span>
        <h2>Our Development Process</h2>
        <p>From discovery to deployment, we follow a proven process that delivers results</p>
      </div>

      <div class="process-steps">
        <div class="process-step">
          <div class="process-number">1</div>
          <h4>Discovery</h4>
          <p>We map your processes, understand your challenges, and identify automation opportunities</p>
        </div>
        <div class="process-step">
          <div class="process-number">2</div>
          <h4>Design</h4>
          <p>Custom solution design tailored to your specific workflows and business goals</p>
        </div>
        <div class="process-step">
          <div class="process-number">3</div>
          <h4>Development</h4>
          <p>Agile development with regular check-ins and iterative feedback loops</p>
        </div>
        <div class="process-step">
          <div class="process-number">4</div>
          <h4>Deploy & Support</h4>
          <p>Smooth rollout, team training, and ongoing optimization and support</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="content-section bg-main">
    <div class="section-container">
      <div class="cta-box">
        <h2>Ready to Automate Your Tourism Operations?</h2>
        <p>Get a free automation plan tailored to your business. Book a 30-minute strategy call to discuss your needs.</p>
        <a href="/contact" class="btn btn-primary">
          Book Your Free Strategy Call <i class="fas fa-arrow-right"></i>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
