---
import BaseLayout from '../components/layout/BaseLayout.astro';
import SectionHeader from '../components/sections/SectionHeader.astro';
import CTASection from '../components/sections/CTASection.astro';
import { generateSEO } from '../lib/seo/metadata';
import { generateOrganizationSchema, generateBreadcrumbSchema, generateServiceSchema } from '../lib/seo/jsonld';

const seo = generateSEO({
  title: 'AI Automation Services for Tourism Businesses',
  description: 'AI chatbots, phone bots, custom software & API integrations for tourism. 24/7 guest support, intelligent email management, dynamic pricing & seamless PMS integration. Transform your operations.',
  canonical: `${Astro.site}services/`,
  ogType: 'website'
});

const services = [
  {
    icon: 'fa-robot',
    title: 'AI Chatbots & Phone Bots',
    description: 'Custom-built conversational AI agents that handle guest communications 24/7 across text and voice channels.',
    features: [
      'Natural language processing in 100+ languages',
      'Voice AI for phone calls with human-like conversations',
      'Website chat, WhatsApp, SMS integration',
      'Booking, inquiries, and support automation',
      'Seamless handoff to human agents when needed'
    ],
    stats: { value: '80%', label: 'Inquiries Automated' },
    color: 'cyan'
  },
  {
    icon: 'fa-code',
    title: 'Custom Software Development',
    description: 'Purpose-built applications designed specifically for your business workflows and operational needs.',
    features: [
      'Dynamic pricing engines with AI optimization',
      'Custom booking and reservation systems',
      'Inventory and resource management tools',
      'Analytics dashboards and reporting platforms',
      'Mobile apps for staff and guests'
    ],
    stats: { value: '2-6wks', label: 'Development Time' },
    color: 'purple'
  },
  {
    icon: 'fa-network-wired',
    title: 'API Integrations & Automation',
    description: 'Connect your entire tech stack with intelligent workflows that eliminate manual data entry and errors.',
    features: [
      'PMS, CRM, and booking engine integrations',
      'Payment processor and accounting software sync',
      'Channel manager and OTA connections',
      'Email and communication platform automation',
      'Custom middleware for legacy systems'
    ],
    stats: { value: '99.9%', label: 'Uptime SLA' },
    color: 'pink'
  },
  {
    icon: 'fa-envelope',
    title: 'AI Email Management',
    description: 'Intelligent email sorting, categorization, and auto-response systems that handle guest communications at scale.',
    features: [
      'Smart inbox organization and prioritization',
      'AI-generated responses with brand voice',
      'Automatic categorization and routing',
      'Sentiment analysis for urgent issues',
      'Integration with ticketing systems'
    ],
    stats: { value: '90%', label: 'Faster Response' },
    color: 'orange'
  },
  {
    icon: 'fa-project-diagram',
    title: 'Process Mapping & Optimization',
    description: 'Clear visualization of your workflows to identify inefficiencies and automation opportunities.',
    features: [
      'Complete workflow documentation',
      'Bottleneck identification and analysis',
      'Automation opportunity assessment',
      'ROI calculation for improvements',
      'Implementation roadmap creation'
    ],
    stats: { value: '40hrs', label: 'Saved Weekly' },
    color: 'green'
  },
  {
    icon: 'fa-graduation-cap',
    title: 'Training & Ongoing Support',
    description: 'Comprehensive onboarding and continuous support to ensure your team masters every system we build.',
    features: [
      'Hands-on training for all staff levels',
      'Custom documentation and video tutorials',
      'Dedicated support team during business hours',
      'Regular system optimization reviews',
      'Feature updates and enhancements'
    ],
    stats: { value: '100%', label: 'Team Trained' },
    color: 'blue'
  }
];

const processSteps = [
  { number: '01', title: 'Discovery', description: 'We map your processes, understand your challenges, and identify automation opportunities', icon: 'fa-search' },
  { number: '02', title: 'Design', description: 'Custom solution design tailored to your specific workflows and business goals', icon: 'fa-pencil-ruler' },
  { number: '03', title: 'Development', description: 'Agile development with regular check-ins and iterative feedback loops', icon: 'fa-code' },
  { number: '04', title: 'Deploy & Support', description: 'Smooth rollout, team training, and ongoing optimization and support', icon: 'fa-rocket' }
];

// Generate service schema data from services array
const serviceSchemaData = services.map(s => ({ name: s.title, description: s.description }));

const jsonLd = [
  generateOrganizationSchema(),
  generateBreadcrumbSchema([
    { name: 'Home', url: Astro.site?.href || '' },
    { name: 'Services', url: `${Astro.site}services/` }
  ]),
  ...generateServiceSchema(serviceSchemaData)
];
---

<BaseLayout seo={seo} jsonLd={jsonLd}>
  <!-- Premium Animated Hero - Desktop Optimized -->
  <section class="services-hero">
    <div class="hero-bg-effects">
      <div class="gradient-orb orb-1"></div>
      <div class="gradient-orb orb-2"></div>
      <div class="gradient-orb orb-3"></div>
      <div class="grid-overlay"></div>
    </div>

    <div class="hero-container">
      <div class="hero-content">
        <span class="hero-badge animate-fade-in">
          <i class="fas fa-wand-magic-sparkles"></i>
          Custom AI Solutions for Tourism
        </span>

        <h1 class="hero-title animate-fade-in-up">
          Transform Your Operations with
          <span class="gradient-text-animated">Intelligent Automation</span>
        </h1>

        <p class="hero-description animate-fade-in-up delay-1">
          From AI chatbots and phone bots to custom software and API integrationsâ€”we build intelligent solutions that transform how tourism businesses operate
        </p>

        <div class="hero-cta-group animate-fade-in-up delay-2">
          <button onclick="openBookingModal()" class="btn-primary-glow">
            <span>Get Free Consultation</span>
            <i class="fas fa-arrow-right"></i>
          </button>
          <a href="#calculator" class="btn-secondary-outline">
            <i class="fas fa-calculator"></i>
            <span>Calculate Your ROI</span>
          </a>
        </div>
      </div>

      <!-- Desktop Visual - Service Icons Grid -->
      <div class="hero-visual animate-fade-in-up delay-2">
        <div class="visual-grid">
          <div class="visual-card" style="--delay: 0s">
            <div class="visual-icon cyan"><i class="fas fa-robot"></i></div>
            <span>AI Chatbots</span>
          </div>
          <div class="visual-card" style="--delay: 0.1s">
            <div class="visual-icon purple"><i class="fas fa-phone-volume"></i></div>
            <span>Voice AI</span>
          </div>
          <div class="visual-card" style="--delay: 0.2s">
            <div class="visual-icon pink"><i class="fas fa-code"></i></div>
            <span>Custom Software</span>
          </div>
          <div class="visual-card" style="--delay: 0.3s">
            <div class="visual-icon orange"><i class="fas fa-network-wired"></i></div>
            <span>API Integration</span>
          </div>
          <div class="visual-card" style="--delay: 0.4s">
            <div class="visual-icon green"><i class="fas fa-envelope"></i></div>
            <span>Email AI</span>
          </div>
          <div class="visual-card" style="--delay: 0.5s">
            <div class="visual-icon blue"><i class="fas fa-chart-line"></i></div>
            <span>Analytics</span>
          </div>
        </div>

        <!-- Floating Stats -->
        <div class="floating-stats">
          <div class="floating-stat stat-1">
            <span class="stat-value">30%</span>
            <span class="stat-label">More Bookings</span>
          </div>
          <div class="floating-stat stat-2">
            <span class="stat-value">40+</span>
            <span class="stat-label">Hours Saved/Week</span>
          </div>
          <div class="floating-stat stat-3">
            <span class="stat-value">24/7</span>
            <span class="stat-label">Availability</span>
          </div>
        </div>
      </div>
    </div>

    <div class="scroll-indicator">
      <div class="scroll-line"></div>
      <span>Scroll to explore</span>
    </div>
  </section>

  <!-- Premium Services Grid -->
  <section class="services-premium-section">
    <div class="section-container">
      <div class="section-header-premium">
        <span class="section-badge-glow">
          <i class="fas fa-cubes"></i>
          What We Build
        </span>
        <h2>Custom AI & Automation Solutions</h2>
        <p>Tailored technology that solves your specific business challenges</p>
      </div>

      <div class="services-premium-grid">
        {services.map((service, index) => (
          <div class="service-card-premium" data-color={service.color} style={`--delay: ${index * 0.1}s`}>
            <div class="card-glow"></div>
            <div class="card-content">
              <div class="service-header">
                <div class="service-icon-wrapper">
                  <div class="icon-glow"></div>
                  <i class={`fas ${service.icon}`}></i>
                </div>
                <div class="service-stat">
                  <span class="stat-value">{service.stats.value}</span>
                  <span class="stat-label">{service.stats.label}</span>
                </div>
              </div>

              <h3>{service.title}</h3>
              <p>{service.description}</p>

              <ul class="feature-list">
                {service.features.map((feature) => (
                  <li>
                    <i class="fas fa-check"></i>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>

              <button onclick="openBookingModal()" class="card-cta">
                <span>Learn More</span>
                <i class="fas fa-arrow-right"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Premium Process Section -->
  <section class="process-premium-section">
    <div class="section-container">
      <div class="section-header-premium centered">
        <span class="section-badge-glow">
          <i class="fas fa-route"></i>
          How We Work
        </span>
        <h2>Our Development Process</h2>
        <p>From discovery to deployment, we follow a proven process that delivers results</p>
      </div>

      <div class="process-timeline">
        {processSteps.map((step, index) => (
          <div class="process-step-premium" style={`--index: ${index}`}>
            <div class="step-connector">
              <div class="connector-line"></div>
              <div class="connector-dot"></div>
            </div>
            <div class="step-card">
              <div class="step-number">{step.number}</div>
              <div class="step-icon">
                <i class={`fas ${step.icon}`}></i>
              </div>
              <h4>{step.title}</h4>
              <p>{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Calculator Section - Embedded -->
  <section class="calculator-section" id="calculator">
    <div class="section-container">
      <div class="calculator-wrapper">
        <div class="calculator-header">
          <span class="section-badge-glow">
            <i class="fas fa-calculator"></i>
            Free ROI Analysis
          </span>
          <h2>Calculate Your <span class="gradient-text-animated">Automation Savings</span></h2>
          <p>See how much time and money your tourism business could save with AI agents and automation</p>
        </div>

        <div class="calculator-embed-wrapper">
          <iframe
            src="/mobile-calculator.html?embed=true"
            class="calculator-embed"
            title="ROI Calculator"
            loading="lazy"
          ></iframe>
        </div>

        <div class="calculator-cta">
          <a href="/calculator" class="calc-fullscreen-link">
            <i class="fas fa-expand"></i>
            Open Full Calculator
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Indicators -->
  <section class="trust-section">
    <div class="section-container">
      <div class="trust-grid">
        <div class="trust-item">
          <div class="trust-icon">
            <i class="fas fa-shield-alt"></i>
          </div>
          <h4>GDPR Compliant</h4>
          <p>Full UK & EU data protection compliance</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon">
            <i class="fas fa-lock"></i>
          </div>
          <h4>Bank-Level Security</h4>
          <p>AES-256 encryption for all data</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon">
            <i class="fas fa-server"></i>
          </div>
          <h4>99.9% Uptime</h4>
          <p>Enterprise-grade reliability</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon">
            <i class="fas fa-headset"></i>
          </div>
          <h4>Dedicated Support</h4>
          <p>Expert help when you need it</p>
        </div>
      </div>
    </div>
  </section>

  <CTASection
    title="Ready to Transform Your Operations?"
    description="Book a free consultation and discover how AI automation can revolutionize your tourism business"
  />
</BaseLayout>

<style>
  /* ==================== HERO SECTION - DESKTOP OPTIMIZED ==================== */
  .services-hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10rem 4rem 6rem;
    overflow: hidden;
    background: linear-gradient(180deg, #000000 0%, #050810 50%, #0a0e1a 100%);
  }

  .hero-bg-effects {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.6;
    animation: orbFloat 20s ease-in-out infinite;
  }

  .orb-1 {
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(6, 182, 212, 0.4) 0%, transparent 70%);
    top: -20%;
    right: -15%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.35) 0%, transparent 70%);
    bottom: -30%;
    left: -15%;
    animation-delay: -7s;
  }

  .orb-3 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(236, 72, 153, 0.25) 0%, transparent 70%);
    top: 40%;
    left: 30%;
    transform: translate(-50%, -50%);
    animation-delay: -14s;
  }

  @keyframes orbFloat {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(30px, -50px) scale(1.1); }
    50% { transform: translate(-20px, 30px) scale(0.9); }
    75% { transform: translate(-40px, -20px) scale(1.05); }
  }

  .grid-overlay {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(6, 182, 212, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(6, 182, 212, 0.03) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 80%);
  }

  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
    width: 100%;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-content {
    text-align: left;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: rgba(6, 182, 212, 0.1);
    border: 1px solid rgba(6, 182, 212, 0.3);
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    color: #06B6D4;
    margin-bottom: 2rem;
  }

  .hero-badge i {
    font-size: 0.85rem;
  }

  .hero-title {
    font-family: 'Sulphur Point', sans-serif;
    font-size: clamp(3rem, 5vw, 4.5rem);
    font-weight: 700;
    line-height: 1.05;
    color: #fff;
    margin-bottom: 1.5rem;
  }

  .gradient-text-animated {
    display: block;
    background: linear-gradient(135deg, #06B6D4, #8B5CF6, #EC4899, #06B6D4);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientFlow 6s ease infinite;
  }

  @keyframes gradientFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.7);
    max-width: 550px;
    margin-bottom: 2.5rem;
  }

  .hero-cta-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-primary-glow {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.1rem 2.25rem;
    background: linear-gradient(135deg, #06B6D4, #8B5CF6);
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 1.05rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(6, 182, 212, 0.3);
  }

  .btn-primary-glow:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(6, 182, 212, 0.5);
  }

  .btn-secondary-outline {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.1rem 2.25rem;
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    color: white;
    font-size: 1.05rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-secondary-outline:hover {
    border-color: #06B6D4;
    background: rgba(6, 182, 212, 0.1);
    transform: translateY(-3px);
  }

  /* Hero Visual - Desktop Only */
  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .visual-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
    position: relative;
    z-index: 1;
  }

  .visual-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    padding: 1.75rem 1.5rem;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    animation: cardFloat 0.8s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
    transform: translateY(30px);
  }

  .visual-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.06);
  }

  @keyframes cardFloat {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .visual-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    position: relative;
  }

  .visual-icon::before {
    content: '';
    position: absolute;
    inset: -8px;
    border-radius: 24px;
    opacity: 0.3;
    filter: blur(12px);
    transition: opacity 0.3s ease;
  }

  .visual-card:hover .visual-icon::before {
    opacity: 0.5;
  }

  .visual-icon.cyan {
    background: rgba(6, 182, 212, 0.15);
  }
  .visual-icon.cyan::before { background: #06B6D4; }
  .visual-icon.cyan i { color: #06B6D4; }

  .visual-icon.purple {
    background: rgba(139, 92, 246, 0.15);
  }
  .visual-icon.purple::before { background: #8B5CF6; }
  .visual-icon.purple i { color: #8B5CF6; }

  .visual-icon.pink {
    background: rgba(236, 72, 153, 0.15);
  }
  .visual-icon.pink::before { background: #EC4899; }
  .visual-icon.pink i { color: #EC4899; }

  .visual-icon.orange {
    background: rgba(251, 146, 60, 0.15);
  }
  .visual-icon.orange::before { background: #FB923C; }
  .visual-icon.orange i { color: #FB923C; }

  .visual-icon.green {
    background: rgba(16, 185, 129, 0.15);
  }
  .visual-icon.green::before { background: #10B981; }
  .visual-icon.green i { color: #10B981; }

  .visual-icon.blue {
    background: rgba(59, 130, 246, 0.15);
  }
  .visual-icon.blue::before { background: #3B82F6; }
  .visual-icon.blue i { color: #3B82F6; }

  .visual-icon i {
    font-size: 1.5rem;
    position: relative;
    z-index: 1;
  }

  .visual-card span {
    font-size: 0.9rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Floating Stats */
  .floating-stats {
    position: absolute;
    inset: -40px;
    pointer-events: none;
  }

  .floating-stat {
    position: absolute;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 1rem 1.25rem;
    text-align: center;
    animation: floatBounce 4s ease-in-out infinite;
  }

  .floating-stat .stat-value {
    display: block;
    font-family: 'Sulphur Point', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #06B6D4, #8B5CF6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .floating-stat .stat-label {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .floating-stat.stat-1 {
    top: 0;
    left: -20px;
    animation-delay: 0s;
  }

  .floating-stat.stat-2 {
    bottom: 20%;
    right: -30px;
    animation-delay: -1.5s;
  }

  .floating-stat.stat-3 {
    bottom: -10px;
    left: 30%;
    animation-delay: -3s;
  }

  @keyframes floatBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-12px); }
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8rem;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(180deg, rgba(6, 182, 212, 0.8), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.5; transform: scaleY(1); }
    50% { opacity: 1; transform: scaleY(1.2); }
  }

  /* Animations */
  .animate-fade-in {
    animation: fadeIn 0.8s ease forwards;
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease forwards;
  }

  .delay-1 { animation-delay: 0.2s; opacity: 0; }
  .delay-2 { animation-delay: 0.4s; opacity: 0; }
  .delay-3 { animation-delay: 0.6s; opacity: 0; }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* ==================== SERVICES SECTION ==================== */
  .services-premium-section {
    padding: 6rem 2rem;
