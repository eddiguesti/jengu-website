---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import Hero from '../../components/sections/Hero.astro';
import CTASection from '../../components/sections/CTASection.astro';
import { generateSEO } from '../../lib/seo/metadata';
import { generateBreadcrumbSchema } from '../../lib/seo/jsonld';

const seo = generateSEO({
  title: 'Blog & Actualités - Dernières Tendances IA | Jengu',
  description: 'Restez informé des dernières tendances en automatisation IA, études de cas et insights pour les entreprises du tourisme et de l\'hôtellerie.',
  canonical: `${Astro.site}fr/blog/`,
  ogType: 'website'
});

const jsonLd = [
  generateBreadcrumbSchema([
    { name: 'Accueil', url: Astro.site?.href || '' },
    { name: 'Blog', url: `${Astro.site}fr/blog/` }
  ])
];

const featuredPost = {
  title: 'L\'avenir de l\'IA dans l\'hôtellerie : Tendances 2025',
  excerpt: 'Alors que nous entrons en 2025, l\'intelligence artificielle révolutionne l\'industrie hôtelière. Des commandes vocales en chambre aux algorithmes de tarification prédictive, découvrez les tendances clés qui façonnent l\'avenir des expériences clients.',
  date: '2025-01-15',
  category: 'Tendances Secteur',
  readTime: '8 min de lecture'
};

const posts = [
  {
    title: 'Comment les Chatbots IA ont Augmenté les Réservations de 40%',
    excerpt: 'Une analyse approfondie de la façon dont un resort de luxe a mis en œuvre des chatbots IA et constaté des améliorations spectaculaires des taux de conversion.',
    date: '2025-01-10',
    category: 'Étude de Cas',
    readTime: '6 min de lecture'
  },
  {
    title: 'Stratégies de Tarification Dynamique pour Hôtels en Haute Saison',
    excerpt: 'Découvrez comment les algorithmes d\'apprentissage automatique peuvent optimiser votre stratégie tarifaire pour maximiser les revenus en période de forte demande.',
    date: '2025-01-05',
    category: 'Revenue Management',
    readTime: '7 min de lecture'
  },
  {
    title: 'Automatiser les Communications Clients : Meilleures Pratiques',
    excerpt: 'Des confirmations de réservation aux suivis post-séjour, découvrez comment automatiser les communications sans perdre la touche personnelle.',
    date: '2024-12-28',
    category: 'Automatisation',
    readTime: '5 min de lecture'
  },
  {
    title: 'IA Vocale : La Nouvelle Frontière des Services aux Clients',
    excerpt: 'Explorez comment les assistants IA à commande vocale transforment les expériences clients et réduisent la charge de travail du personnel dans les hôtels.',
    date: '2024-12-20',
    category: 'Technologie',
    readTime: '6 min de lecture'
  },
  {
    title: 'Analyse ROI : Implémentation IA chez les Tour-Opérateurs',
    excerpt: 'Un regard complet sur le retour sur investissement lors de l\'implémentation de solutions d\'automatisation IA pour les tour-opérateurs et DMC.',
    date: '2024-12-15',
    category: 'Business',
    readTime: '9 min de lecture'
  },
  {
    title: 'Automatisation Email qui Convertit : Guide Complet',
    excerpt: 'Maîtrisez l\'art du marketing par email automatisé pour les entreprises touristiques avec des modèles éprouvés et des techniques d\'optimisation.',
    date: '2024-12-10',
    category: 'Marketing',
    readTime: '7 min de lecture'
  }
];
---

<BaseLayout seo={seo} jsonLd={jsonLd}>
  <Hero
    title="Perspectives IA &"
    highlight="Actualités Secteur"
    description="Points de vue d'experts sur l'automatisation IA, la technologie hôtelière et la transformation digitale du tourisme"
  />

  <section class="blog-header">
    <div class="newspaper-masthead">
      <div class="masthead-line"></div>
      <h2 class="masthead-title">Le Journal Jengu</h2>
      <div class="masthead-tagline">Où l'Innovation Rencontre l'Hospitalité</div>
      <div class="masthead-line"></div>
    </div>
  </section>

  <section class="featured-article">
    <div class="section-container">
      <div class="featured-grid">
        <div class="featured-content">
          <span class="article-category featured-category">{featuredPost.category}</span>
          <h2 class="featured-title">{featuredPost.title}</h2>
          <div class="article-meta">
            <time datetime={featuredPost.date}>
              {new Date(featuredPost.date).toLocaleDateString('fr-FR', { month: 'long', day: 'numeric', year: 'numeric' })}
            </time>
            <span class="meta-separator">•</span>
            <span>{featuredPost.readTime}</span>
          </div>
          <p class="featured-excerpt">{featuredPost.excerpt}</p>
          <a href="#" class="read-more-btn">
            Lire l'Article Complet <i class="fas fa-arrow-right"></i>
          </a>
        </div>
        <div class="featured-image-container">
          <div class="featured-badge">Article Vedette</div>
          <div class="featured-image"></div>
        </div>
      </div>
    </div>
  </section>

  <section class="articles-grid-section">
    <div class="section-container">
      <div class="section-divider">
        <span class="divider-text">Derniers Articles</span>
      </div>

      <div class="articles-grid">
        {posts.map((post, index) => (
          <article class="article-card" style={`animation-delay: ${index * 0.1}s`}>
            <div class="article-image"></div>
            <div class="article-content">
              <span class="article-category">{post.category}</span>
              <h3 class="article-title">{post.title}</h3>
              <p class="article-excerpt">{post.excerpt}</p>
              <div class="article-footer">
                <time datetime={post.date}>
                  {new Date(post.date).toLocaleDateString('fr-FR', { month: 'short', day: 'numeric', year: 'numeric' })}
                </time>
                <span class="meta-separator">•</span>
                <span>{post.readTime}</span>
              </div>
              <a href="#" class="article-link">
                Continuer la Lecture <i class="fas fa-arrow-right"></i>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="newsletter-section">
    <div class="section-container">
      <div class="newsletter-card">
        <div class="newsletter-icon">
          <i class="fas fa-newspaper"></i>
        </div>
        <h3>Abonnez-vous au Journal Jengu</h3>
        <p>Recevez chaque semaine des insights sur l'automatisation IA, les tendances du secteur et des études de cas exclusives.</p>
        <form class="newsletter-form">
          <input type="email" placeholder="Entrez votre adresse email" class="newsletter-input" required>
          <button type="submit" class="newsletter-btn">
            S'abonner <i class="fas fa-paper-plane"></i>
          </button>
        </form>
        <p class="newsletter-note">Pas de spam. Désabonnement à tout moment.</p>
      </div>
    </div>
  </section>

  <CTASection
    title="Prêt à transformer votre entreprise?"
    description="Calculez votre ROI potentiel en seulement 2 minutes"
  />
</BaseLayout>

<style>
  .blog-header {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    padding: 3rem 0 2rem;
    border-bottom: 3px double var(--primary);
  }

  .newspaper-masthead {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .masthead-line {
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--primary), transparent);
    margin: 1rem 0;
  }

  .masthead-title {
    font-family: 'Sulphur Point', serif;
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--text-dark);
    margin: 0.5rem 0;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .masthead-tagline {
    font-family: 'Figtree', sans-serif;
    font-size: 1rem;
    font-style: italic;
    color: var(--gray);
    letter-spacing: 1px;
  }

  .featured-article {
    padding: 4rem 0;
    background: var(--bg-main);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .featured-category {
    background: linear-gradient(135deg, #ef4444, #dc2626);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .featured-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    line-height: 1.2;
    margin-bottom: 1rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--gray);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .meta-separator {
    color: var(--primary);
  }

  .featured-excerpt {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--gray);
    margin-bottom: 2rem;
    animation: fadeInUp 0.6s ease-out 0.2s backwards;
  }

  .read-more-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--primary), #0891b2);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease-out 0.4s backwards;
  }

  .read-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(6, 182, 212, 0.3);
  }

  .read-more-btn i {
    transition: transform 0.3s ease;
  }

  .read-more-btn:hover i {
    transform: translateX(5px);
  }

  .featured-image-container {
    position: relative;
    height: 500px;
    border-radius: 20px;
    overflow: hidden;
    animation: fadeInRight 0.8s ease-out 0.3s backwards;
  }

  .featured-badge {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: rgba(239, 68, 68, 0.95);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.85rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    z-index: 10;
    backdrop-filter: blur(10px);
  }

  .featured-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(8, 145, 178, 0.3)),
                url('/api/placeholder/800/600') center/cover;
    transition: transform 0.5s ease;
  }

  .featured-image-container:hover .featured-image {
    transform: scale(1.05);
  }

  .section-divider {
    text-align: center;
    margin: 3rem 0 2rem;
    position: relative;
  }

  .section-divider::before,
  .section-divider::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 40%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--primary), transparent);
  }

  .section-divider::before {
    left: 0;
  }

  .section-divider::after {
    right: 0;
  }

  .divider-text {
    background: var(--bg-light);
    padding: 0 2rem;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-dark);
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .articles-grid-section {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .article-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    animation: fadeInUp 0.6s ease-out backwards;
    border: 1px solid rgba(6, 182, 212, 0.1);
  }

  .article-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(6, 182, 212, 0.15);
  }

  .article-image {
    width: 100%;
    height: 220px;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(8, 145, 178, 0.2)),
                url('/api/placeholder/400/300') center/cover;
    transition: transform 0.5s ease;
  }

  .article-card:hover .article-image {
    transform: scale(1.1);
  }

  .article-content {
    padding: 1.5rem;
  }

  .article-category {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(8, 145, 178, 0.1));
    color: var(--primary);
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .article-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-dark);
    line-height: 1.4;
    margin-bottom: 0.75rem;
  }

  .article-excerpt {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--gray);
    margin-bottom: 1rem;
  }

  .article-footer {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--gray);
    font-size: 0.85rem;
    margin-bottom: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .article-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .article-link:hover {
    gap: 0.75rem;
  }

  .article-link i {
    transition: transform 0.3s ease;
  }

  .article-link:hover i {
    transform: translateX(3px);
  }

  .newsletter-section {
    padding: 4rem 0;
    background: var(--bg-main);
  }

  .newsletter-card {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.05), rgba(8, 145, 178, 0.05));
    border: 2px solid rgba(6, 182, 212, 0.2);
    border-radius: 24px;
    padding: 3rem;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    animation: fadeInUp 0.8s ease-out;
  }

  .newsletter-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--primary), #0891b2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }

  .newsletter-icon i {
    font-size: 2rem;
    color: white;
  }

  .newsletter-card h3 {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }

  .newsletter-card > p {
    font-size: 1.1rem;
    color: var(--gray);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto 1rem;
  }

  .newsletter-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: 2px solid rgba(6, 182, 212, 0.2);
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    color: white;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--primary);
    background: rgba(255, 255, 255, 0.08);
  }

  .newsletter-btn {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--primary), #0891b2);
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .newsletter-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(6, 182, 212, 0.3);
  }

  .newsletter-note {
    color: var(--gray);
    font-size: 0.85rem;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @media (max-width: 768px) {
    .masthead-title {
      font-size: 2.5rem;
    }

    .featured-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .featured-title {
      font-size: 2rem;
    }

    .featured-image-container {
      height: 300px;
      order: -1;
    }

    .articles-grid {
      grid-template-columns: 1fr;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-btn {
      justify-content: center;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
