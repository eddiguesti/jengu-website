---
import SEOHead from '../seo/SEOHead.astro';
import JsonLd from '../seo/JsonLd.astro';
import Hreflang from '../seo/Hreflang.astro';
import Analytics from '../seo/Analytics.astro';
import OptimizedImage from '../OptimizedImage.astro';
import LanguageSwitcher from '../LanguageSwitcher.astro';
import BookingModal from '../BookingModal.astro';
import { getLocaleFromUrl, getTranslations } from '../../i18n';
import type { SEOConfig } from '../../lib/seo/metadata';
import '../../styles/landing.css';

interface Props {
  seo: SEOConfig;
  jsonLd?: object | object[];
}

const { seo, jsonLd } = Astro.props;
const currentPath = Astro.url.pathname;
const currentLocale = getLocaleFromUrl(currentPath);
const t = getTranslations(currentLocale);
---

<!DOCTYPE html>
<html lang={currentLocale}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <meta name="generator" content={Astro.generator} />

  <!-- Performance: DNS Prefetch & Preconnect for external resources -->
  <link rel="dns-prefetch" href="https://fonts.googleapis.com">
  <link rel="dns-prefetch" href="https://fonts.gstatic.com">
  <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
  <link rel="dns-prefetch" href="https://prod.spline.design">
  <link rel="dns-prefetch" href="https://unpkg.com">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://prod.spline.design" crossorigin>
  <link rel="preconnect" href="https://unpkg.com" crossorigin>

  <!-- Fonts: Optimized loading with font-display swap -->
  <link
    href="https://fonts.googleapis.com/css2?family=Sulphur+Point:wght@700&family=Figtree:wght@400;500;600&display=swap"
    rel="stylesheet"
    media="print"
    onload="this.media='all';this.onload=null"
  >
  <noscript>
    <link href="https://fonts.googleapis.com/css2?family=Sulphur+Point:wght@700&family=Figtree:wght@400;500;600&display=swap" rel="stylesheet">
  </noscript>

  <!-- Preload critical font to reduce FCP -->
  <link
    rel="preload"
    href="https://fonts.gstatic.com/s/figtree/v5/_Xmz-H4zszafZw3A-KPSZutNxgKQu_avK2SZ.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  >

  <!-- Font Awesome: Deferred loading -->
  <link
    rel="preload"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    as="style"
    onload="this.onload=null;this.rel='stylesheet'"
  >
  <noscript><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"></noscript>

  <!-- Preload critical assets -->
  <link rel="preload" href="/images/logo.png" as="image" type="image/png">
  <link rel="preload" href="/scripts/main.js" as="script">

  <!-- GSAP for navbar morph animation -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>

  <!-- SEO -->
  <SEOHead seo={seo} />
  <Hreflang currentPath={currentPath} />
  {jsonLd && <JsonLd schema={jsonLd} />}
</head>
<body>
  <!-- Navigation -->
  <nav id="navbar">
    <div class="nav-container">
      <div class="nav-right">
        <!-- Free Consultation CTA -->
        <button onclick="openBookingModal()" class="nav-consultation-cta">
          <i class="fas fa-calendar-check"></i>
          <span>{t.nav.freeConsultation}</span>
        </button>

        <!-- Language Switcher -->
        <LanguageSwitcher />

        <!-- Burger Menu Button -->
        <button class="burger-menu" id="burgerMenu" aria-label="Toggle menu">
          <span class="burger-line"></span>
          <span class="burger-line"></span>
          <span class="burger-line"></span>
        </button>
      </div>
    </div>
  </nav>

  <!-- Sidebar Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay"></div>

  <!-- Sidebar Menu - Rebuilt from scratch -->
  <aside id="sidebar">
    <!-- Header with close button -->
    <div class="sidebar-header">
      <button class="sidebar-close" id="sidebarClose" type="button" aria-label="Close sidebar">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- Navigation links (scrollable) -->
    <nav class="sidebar-nav">
      <a href="/" class="sidebar-link">
        <i class="fas fa-home"></i>
        <span>{t.nav.home}</span>
      </a>
      <a href="/about" class="sidebar-link">
        <i class="fas fa-info-circle"></i>
        <span>{t.nav.about}</span>
      </a>
      <a href="/services" class="sidebar-link">
        <i class="fas fa-cogs"></i>
        <span>{t.nav.services}</span>
      </a>
      <a href="/dynamic-pricing" class="sidebar-link">
        <i class="fas fa-chart-line"></i>
        <span>{t.nav.dynamicPricing}</span>
      </a>
      <a href="/case-studies" class="sidebar-link">
        <i class="fas fa-briefcase"></i>
        <span>{t.nav.caseStudies}</span>
      </a>
      <a href="/blog" class="sidebar-link">
        <i class="fas fa-newspaper"></i>
        <span>{t.nav.blog}</span>
      </a>
      <a href="/faq" class="sidebar-link">
        <i class="fas fa-question-circle"></i>
        <span>{t.nav.faq}</span>
      </a>
      <a href="/team" class="sidebar-link">
        <i class="fas fa-users"></i>
        <span>{t.nav.team}</span>
      </a>
      <a href="/contact" class="sidebar-link">
        <i class="fas fa-envelope"></i>
        <span>{t.nav.contact}</span>
      </a>
    </nav>

    <!-- CTA buttons at bottom -->
    <div class="sidebar-cta-container">
      <button onclick="openBookingModal()" class="sidebar-cta sidebar-cta-primary">
        <i class="fas fa-comments"></i>
        <span>{t.nav.getConsultation}</span>
      </button>
      <a href="#" onclick="handleCalculatorClick(event)" class="sidebar-cta sidebar-cta-secondary">
        <i class="fas fa-calculator"></i>
        <span>{t.nav.calculateROI}</span>
      </a>
    </div>
  </aside>

  <!-- Main Content -->
  <slot />

  <!-- Footer -->
  <footer>
    <div class="footer-container">
      <div class="footer-brand">
        <p>
          AI automation solutions for tourism and hospitality. We build custom chatbots, phone bots, software, and API integrations.
        </p>
        <div class="footer-contact">
          <p><i class="fas fa-envelope"></i> info@jengu.ai</p>
        </div>
      </div>
      <div class="footer-section">
        <h4>Company</h4>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About Us</a></li>
          <li><a href="/services">Services</a></li>
          <li><a href="/team">Team</a></li>
        </ul>
      </div>
      <div class="footer-section">
        <h4>Resources</h4>
        <ul class="footer-links">
          <li><a href="/blog">Blog & News</a></li>
          <li><a href="/case-studies">Case Studies</a></li>
          <li><a href="/faq">FAQ</a></li>
          <li><a href="#" onclick="handleCalculatorClick(event)">ROI Calculator</a></li>
          <li><a href="/contact">Contact Us</a></li>
        </ul>
      </div>
      <div class="footer-section">
        <h4>Legal</h4>
        <ul class="footer-links">
          <li><a href="/terms">Terms & Conditions</a></li>
          <li><a href="/privacy">Privacy Policy</a></li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; 2025 Jengu. All rights reserved.</p>
    </div>
  </footer>

  <!-- Calculator Modal (Desktop Only) -->
  <div id="calculatorModalOverlay" class="calculator-modal-overlay">
    <div class="calculator-modal-content">
      <button class="calculator-modal-close" id="calculatorModalClose" aria-label="Close calculator">
        <i class="fas fa-times"></i>
      </button>
      <iframe
        id="calculatorIframe"
        src="/calculator-ai-agents-2025.html"
        title="ROI Calculator"
        class="calculator-iframe"
        frameborder="0"
      ></iframe>
    </div>
  </div>

  <!-- Booking Modal -->
  <BookingModal />

  <!-- Global JavaScript -->
  <script is:inline src="/scripts/main.js"></script>
  <script is:inline src="/scripts/language-persistence.js"></script>

  <!-- Navbar Morph Animation -->
  <script type="module">
    let morphTimeline = null;
    let isAnimating = false;

    function morphNavbarToSidebar() {
      if (isAnimating) return;
      isAnimating = true;

      const navRight = document.querySelector('.nav-right');
      const sidebar = document.getElementById('sidebar');
      const sidebarOverlay = document.getElementById('sidebarOverlay');
      const burgerMenu = document.getElementById('burgerMenu');
      const mainContent = document.querySelector('main') || document.querySelector('.hero');

      // Create timeline
      morphTimeline = gsap.timeline({
        onComplete: () => {
          isAnimating = false;
          sidebar.classList.add('active');
          sidebarOverlay.classList.add('active');
          burgerMenu.classList.add('active');
          document.body.style.overflow = 'hidden';
        }
      });

      // Get positions
      const navRect = navRight.getBoundingClientRect();
      const sidebarWidth = 280;

      // Animate navbar pill morphing to sidebar
      morphTimeline
        // Scale and move navbar pill to top-right corner
        .to(navRight, {
          duration: 0.5,
          x: window.innerWidth - navRect.right + (sidebarWidth - navRect.width),
          scaleX: sidebarWidth / navRect.width,
          scaleY: window.innerHeight / navRect.height,
          borderRadius: '16px 0 0 16px',
          transformOrigin: 'right top',
          ease: 'power3.inOut'
        }, 0)
        // Fade out navbar contents
        .to(navRight.children, {
          duration: 0.3,
          opacity: 0,
          ease: 'power2.in'
        }, 0)
        // Show overlay
        .to(sidebarOverlay, {
          duration: 0.4,
          opacity: 1,
          visibility: 'visible',
          ease: 'power2.out'
        }, 0.1)
        // Subtle page shift
        .to(mainContent, {
          duration: 0.5,
          x: -20,
          scale: 0.98,
          ease: 'power3.inOut'
        }, 0)
        // Reveal sidebar content
        .fromTo(sidebar,
          { opacity: 0 },
          {
            duration: 0.3,
            opacity: 1,
            ease: 'power2.out'
          }, 0.3);
    }

    function morphSidebarToNavbar() {
      if (isAnimating) return;
      isAnimating = true;

      const navRight = document.querySelector('.nav-right');
      const sidebar = document.getElementById('sidebar');
      const sidebarOverlay = document.getElementById('sidebarOverlay');
      const burgerMenu = document.getElementById('burgerMenu');
      const mainContent = document.querySelector('main') || document.querySelector('.hero');

      // Create reverse timeline
      const reverseTimeline = gsap.timeline({
        onComplete: () => {
          isAnimating = false;
          sidebar.classList.remove('active');
          sidebarOverlay.classList.remove('active');
          burgerMenu.classList.remove('active');
          document.body.style.overflow = 'auto';
        }
      });

      reverseTimeline
        // Hide sidebar content
        .to(sidebar, {
          duration: 0.2,
          opacity: 0,
          ease: 'power2.in'
        }, 0)
        // Hide overlay
        .to(sidebarOverlay, {
          duration: 0.3,
          opacity: 0,
          visibility: 'hidden',
          ease: 'power2.in'
        }, 0)
        // Morph back to navbar pill
        .to(navRight, {
          duration: 0.5,
          x: 0,
          scaleX: 1,
          scaleY: 1,
          borderRadius: '50px',
          transformOrigin: 'right top',
          ease: 'power3.inOut'
        }, 0.1)
        // Fade in navbar contents
        .to(navRight.children, {
          duration: 0.3,
          opacity: 1,
          ease: 'power2.out'
        }, 0.3)
        // Reset page position
        .to(mainContent, {
          duration: 0.5,
          x: 0,
          scale: 1,
          ease: 'power3.inOut'
        }, 0.1);
    }

    // Override the existing sidebar functions
    window.openSidebar = morphNavbarToSidebar;
    window.closeSidebar = morphSidebarToNavbar;

    // Wait for DOM to be ready
    document.addEventListener('DOMContentLoaded', () => {
      const burgerMenu = document.getElementById('burgerMenu');
      const sidebarOverlay = document.getElementById('sidebarOverlay');
      const sidebarClose = document.getElementById('sidebarClose');

      if (burgerMenu) {
        burgerMenu.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          const isActive = burgerMenu.classList.contains('active');
          if (isActive) {
            morphSidebarToNavbar();
          } else {
            morphNavbarToSidebar();
          }
        });
      }

      if (sidebarClose) {
        sidebarClose.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          morphSidebarToNavbar();
        });
      }

      if (sidebarOverlay) {
        sidebarOverlay.addEventListener('click', morphSidebarToNavbar);
      }

      // Close sidebar when clicking a link
      document.querySelectorAll('.sidebar-link, .sidebar-cta').forEach(link => {
        link.addEventListener('click', () => {
          setTimeout(morphSidebarToNavbar, 200);
        });
      });
    });
  </script>

  <!-- Analytics - Loaded last to prevent blocking -->
  <Analytics />
</body>
</html>
