      calendarGrid.innerHTML = "";
      const firstDayOfMonth = new Date(currentYear, currentMonth, 1);
      const lastDayOfMonth = new Date(currentYear, currentMonth + 1, 0);
      const totalDays = lastDayOfMonth.getDate();

      // Monday-start index (0 = Monday,..., 6 = Sunday)
      let startDay = firstDayOfMonth.getDay(); // 0-6 (Sun-Sat)
      startDay = (startDay + 6) % 7; // convert to Monday-based

      monthLabel.textContent = monthNames[currentMonth] + " " + currentYear;

      // Empty slots before first day
      for (let i = 0; i < startDay; i++) {
        const emptyBtn = document.createElement("button");
        emptyBtn.className = "calendar-day calendar-day--empty";
        emptyBtn.disabled = true;
        calendarGrid.appendChild(emptyBtn);
      }

      // Actual days
      for (let day = 1; day <= totalDays; day++) {
        const btn = document.createElement("button");
        btn.className = "calendar-day";
        const dateISO = toISODate(currentYear, currentMonth, day);

        // Past dates should be disabled
        const dateObj = new Date(currentYear, currentMonth, day);
        const isPast = dateObj < new Date(today.getFullYear(), today.getMonth(), today.getDate());

        if (isPast) {
          btn.classList.add("calendar-day--empty");
          btn.disabled = true;
          btn.style.opacity = "0.4";
        }

        // Today
        const isToday = dateObj.toDateString() === new Date().toDateString();
        if (isToday && !isPast) {
          btn.classList.add("calendar-day--today");
        }

        // Apply selected state if this is the selected date
        if (selectedDate === dateISO) {
          btn.classList.add("calendar-day--selected");
          console.log('Applied calendar-day--selected to:', dateISO);
        }

        btn.dataset.date = dateISO;
        btn.innerHTML = "<span>" + day + "</span>";

        btn.addEventListener("click", function () {
          if (btn.classList.contains("calendar-day--empty")) return;
          selectedDate = dateISO;
          // Reset previously selected date & time
          selectedTime = null;
          document.querySelectorAll(".calendar-day--selected").forEach(function (el) {
            el.classList.remove("calendar-day--selected");
          });
          btn.classList.add("calendar-day--selected");
          document.querySelectorAll(".slot-btn--selected").forEach(function (el) {
            el.classList.remove("slot-btn--selected");
          });
          updateLabels();
        });

        calendarGrid.appendChild(btn);
      }
    }

    function renderSlots() {
      slotsContainer.innerHTML = "";
      slots.forEach(function (timeStr, index) {
        const btn = document.createElement("button");
        btn.type = "button";
        btn.className = "slot-btn";
        btn.dataset.time = timeStr;

        // Apply selected state if this is the selected time
        if (selectedTime === timeStr) {
          btn.classList.add("slot-btn--selected");
          console.log('Applied slot-btn--selected to:', timeStr);
        }

        btn.innerHTML = "<span>" + timeStr + "</span>";

        btn.addEventListener("click", function () {
          selectedTime = timeStr;
          document.querySelectorAll(".slot-btn--selected").forEach(function (el) {
            el.classList.remove("slot-btn--selected");
          });
          btn.classList.add("slot-btn--selected");
          updateLabels();
        });

        slotsContainer.appendChild(btn);
      });
    }

    function formatReadableDate(iso) {
      if (!iso) return "No date selected";
      const parts = iso.split("-");
      const year = parseInt(parts[0], 10);
      const month = parseInt(parts[1], 10) - 1;
      const day = parseInt(parts[2], 10);
      const d = new Date(year, month, day);
      const weekday = weekdayNames[d.getDay()];
      return weekday + ", " + d.getDate() + " " + monthNames[month] + " " + year;
    }

    function updateLabels() {
      const hasDate = !!selectedDate;
      const hasTime = !!selectedTime;

      selectedDateLabel.textContent = hasDate
        ? (t.selectedPrefix || "Selected: ") + formatReadableDate(selectedDate)
        : (t.noDateSelected || "No date selected");

      if (!hasDate && !hasTime) {
        summaryMain.textContent = t.chooseDateAndTime || "Choose a date & time";
        summarySecondary.textContent = t.calendarInviteMessage ||
          "You'll receive the calendar invite & meeting link right after confirming.";
        summaryStatus.innerHTML = '<span class="summary-status-dot"></span>' + (t.status?.tentative || "Tentative");
        confirmBtn.disabled = true;
        summaryMessage.textContent = "";
        summaryMessage.className = "summary-message";
        return;
      }

      if (hasDate && !hasTime) {
        summaryMain.textContent = formatReadableDate(selectedDate);
        summarySecondary.textContent = t.messages?.awaitingTimeSelection ||
          "Now choose a time slot on the right to complete your booking.";
        summaryStatus.innerHTML = '<span class="summary-status-dot"></span>' + (t.status?.awaitingTime || "Awaiting time");
        confirmBtn.disabled = true;
        summaryMessage.textContent = "";
        summaryMessage.className = "summary-message";
        return;
      }

      if (hasDate && hasTime) {
        summaryMain.textContent = formatReadableDate(selectedDate) + " • " + selectedTime;
        const timezoneLabel = timezoneSelect.options[timezoneSelect.selectedIndex].textContent;
        summarySecondary.textContent = (t.messages?.scheduledInTimezone || "Your meeting will be scheduled in ") + timezoneLabel + ".";
        summaryStatus.innerHTML = '<span class="summary-status-dot"></span>' + (t.status?.readyToConfirm || "Ready to confirm");
        confirmBtn.disabled = false;
        summaryMessage.textContent = "";
        summaryMessage.className = "summary-message";
      }
    }

    function clearSelection() {
      selectedDate = null;
      selectedTime = null;
      document.querySelectorAll('.calendar-day--selected').forEach(function (el) {
        el.classList.remove('calendar-day--selected');
      });
      document.querySelectorAll('.slot-btn--selected').forEach(function (el) {
        el.classList.remove('slot-btn--selected');
      });
      if (userNameInput) userNameInput.value = '';
      if (companyNameInput) companyNameInput.value = '';
      if (userEmailInput) userEmailInput.value = '';
      if (userPhoneInput) userPhoneInput.value = '';
      if (contactMethodHidden) contactMethodHidden.value = '';
      if (contactMethodGroup) {
        contactMethodGroup.querySelectorAll('.contact-method-chip--selected').forEach(function (chip) {
          chip.classList.remove('contact-method-chip--selected');
        });
      }
      if (extraInfoInput) extraInfoInput.value = '';
      summaryMessage.textContent = '';
      summaryMessage.className = 'summary-message';
      updateLabels();
    }

    const prevMonthBtn = document.getElementById("prevMonthBtn");
    const nextMonthBtn = document.getElementById("nextMonthBtn");

    if (prevMonthBtn) {
      prevMonthBtn.addEventListener("click", function () {
        currentMonth--;
        if (currentMonth < 0) {
          currentMonth = 11;
          currentYear--;
        }
        renderCalendar();
      });
    }

    if (nextMonthBtn) {
      nextMonthBtn.addEventListener("click", function () {
        currentMonth++;
        if (currentMonth > 11) {
          currentMonth = 0;
          currentYear++;
        }
        renderCalendar();
      });
    }

    if (confirmBtn) {
      confirmBtn.addEventListener("click", async function () {
      if (!selectedDate || !selectedTime) {
        summaryMessage.textContent = t.messages?.selectBoth || "Please choose both a date and a time slot.";
        summaryMessage.className = "summary-message summary-message--error";
        return;
      }

      const name = userNameInput.value.trim();
      const email = userEmailInput.value.trim();
      const company = companyNameInput.value.trim();
      const phone = userPhoneInput.value.trim();
      const contactMethod = contactMethodHidden.value;
      const extraInfo = extraInfoInput.value.trim();

      if (!name || !email || !contactMethod) {
        summaryMessage.textContent = t.messages?.fillRequired || "Please add your name, email and preferred contact method to confirm.";
        summaryMessage.className = "summary-message summary-message--error";
        return;
      }

      const timezoneValue = timezoneSelect.value;

      const payload = {
        date: selectedDate,
        time: selectedTime,
        timezone: timezoneValue,
        name,
        email,
        company,
        phone,
        contactMethod,
        extraInfo
      };

      summaryMessage.textContent = t.messages?.creating || "Creating your calendar event…";
      summaryMessage.className = "summary-message";

      try {
        const fetchOptions = {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        };

        const res = await fetch("/api/book", fetchOptions);

        if (!res.ok) {
          let errMsg = t.messages?.errorCreate || "Failed to create calendar event.";
          try {
            const err = await res.json();
            if (err && err.error) errMsg = err.error;
          } catch (_) {}
          throw new Error(errMsg);
        }

        const data = await res.json();

        summaryMessage.textContent =
          (t.messages?.confirmationPrefix || "Booking confirmed for ") +
          formatReadableDate(selectedDate) +
          (t.messages?.confirmationAt || " at ") +
          selectedTime +
          (t.messages?.confirmationVia || " via ") +
          contactMethod +
          (t.messages?.confirmationEmail || ". We'll email ") +
          email +
          (t.messages?.confirmationDetails || " with the details.");
        summaryMessage.className = "summary-message summary-message--success";

        // Clear form and close modal after 3 seconds
        setTimeout(() => {
          clearSelection();
          setTimeout(() => {
            closeBookingModal();
          }, 1500);
        }, 2000);
      } catch (err) {
        console.error(err);
        summaryMessage.textContent = t.messages?.errorSave ||
          "We couldn't save this to the calendar. Please try again or contact support.";
        summaryMessage.className = "summary-message summary-message--error";
      }
      });
    }

    if (clearBtn) {
      clearBtn.addEventListener("click", function () {
        clearSelection();
      });
    }

    if (timezoneSelect) {
        timezoneSelect.addEventListener("change", function () {
        // For now, we only show the label. If you want, you can actually convert times here.
        updateLabels();
      });
    }

    // Auto-select today's date and time BEFORE rendering
    const todayStr = toISODate(today.getFullYear(), today.getMonth(), today.getDate());
    selectedDate = todayStr;
    selectedTime = "14:00";

    // Now render with selections already set
    renderCalendar();
    renderSlots();
    updateLabels();
  }

  // Modal open/close functions - globally accessible
  window.openBookingModal = function() {
    // Lazy initialize modal on first open
    initBookingModal();

    const overlay = document.getElementById('bookingModalOverlay');
    if (overlay) {
      overlay.style.display = 'flex';
      requestAnimationFrame(() => {
        overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }
  };

  window.closeBookingModal = function() {
    const overlay = document.getElementById('bookingModalOverlay');
    if (overlay) {
      overlay.classList.remove('active');
      setTimeout(() => {
        overlay.style.display = 'none';
      }, 300);
      document.body.style.overflow = 'auto';
    }
  };

  // Setup modal close handlers on DOM ready
  document.addEventListener('DOMContentLoaded', () => {
    const closeBtn = document.getElementById('bookingModalClose');
    if (closeBtn) {
      closeBtn.addEventListener('click', window.closeBookingModal);
    }

    // Close on overlay click
    const overlay = document.getElementById('bookingModalOverlay');
    if (overlay) {
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) {
          window.closeBookingModal();
        }
      });
    }

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        window.closeBookingModal();
      }
    });
  });
</script>
