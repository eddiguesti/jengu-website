---
// BookingModal - Clean, modern calendar booking widget
import { getLocaleFromUrl, getTranslations } from '../i18n';

const currentPath = Astro.url.pathname;
const currentLocale = getLocaleFromUrl(currentPath);
const t = getTranslations(currentLocale);
---

<div id="bookingModalOverlay" class="booking-overlay">
  <div class="booking-modal">
    <!-- Close Button -->
    <button class="booking-close" id="bookingModalClose" aria-label="Close">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12"/>
      </svg>
    </button>

    <!-- Modal Header -->
    <div class="booking-modal-header">
      <h2 class="booking-modal-title">{t.booking.title}</h2>
      <p class="booking-modal-subtitle">{t.booking.subtitle}</p>
      <span class="booking-duration-badge">
        <i class="fas fa-clock"></i>
        {t.booking.duration}
      </span>
    </div>

    <!-- Main Content -->
    <div class="booking-content">
      <!-- Left Column: Calendar & Time -->
      <div class="booking-left">
        <!-- Calendar Section -->
        <div class="booking-section">
          <div class="section-header">
            <span class="section-number">1</span>
            <span class="section-title">{t.booking.step1}</span>
          </div>

          <div class="calendar-container">
            <div class="calendar-nav-row">
              <button type="button" id="prevMonthBtn" class="cal-nav-btn" aria-label="Previous month">
                <i class="fas fa-chevron-left"></i>
              </button>
              <span id="calendarMonthLabel" class="calendar-month">Month 2025</span>
              <button type="button" id="nextMonthBtn" class="cal-nav-btn" aria-label="Next month">
                <i class="fas fa-chevron-right"></i>
              </button>
            </div>

            <div class="calendar-weekdays">
              <span>{t.booking.weekdays.mon}</span>
              <span>{t.booking.weekdays.tue}</span>
              <span>{t.booking.weekdays.wed}</span>
              <span>{t.booking.weekdays.thu}</span>
              <span>{t.booking.weekdays.fri}</span>
              <span>{t.booking.weekdays.sat}</span>
              <span>{t.booking.weekdays.sun}</span>
            </div>

            <div class="calendar-grid" id="calendarGrid"></div>
          </div>
        </div>

        <!-- Time Slots Section -->
        <div class="booking-section">
          <div class="section-header">
            <span class="section-number">2</span>
            <span class="section-title">{t.booking.step2}</span>
          </div>

          <div class="timezone-picker">
            <i class="fas fa-globe"></i>
            <select id="timezoneSelect" class="timezone-select">
              <option value="local">{t.booking.timezones.local}</option>
              <option value="Europe/Madrid">{t.booking.timezones.madrid}</option>
              <option value="Europe/London">{t.booking.timezones.london}</option>
              <option value="America/New_York">{t.booking.timezones.newYork}</option>
              <option value="America/Los_Angeles">{t.booking.timezones.losAngeles}</option>
            </select>
          </div>

          <div class="time-slots" id="slotsContainer"></div>
        </div>
      </div>

      <!-- Right Column: Form -->
      <div class="booking-right">
        <div class="booking-section">
          <div class="section-header">
            <span class="section-number">3</span>
            <span class="section-title">{t.booking.step3}</span>
          </div>

          <!-- Selection Summary -->
          <div class="selection-summary" id="selectionSummary">
            <div class="summary-icon">
              <i class="fas fa-calendar-check"></i>
            </div>
            <div class="summary-text">
              <span class="summary-main" id="summaryMain">{t.booking.chooseDateAndTime}</span>
              <span class="summary-sub" id="summarySecondary">{t.booking.videoMeetingDuration}</span>
            </div>
          </div>

          <!-- Form Fields -->
          <div class="booking-form">
            <div class="form-row">
              <div class="form-group">
                <label for="userName">{t.booking.form.name} *</label>
                <input type="text" id="userName" placeholder="John Smith" required />
              </div>
              <div class="form-group">
                <label for="companyName">{t.booking.form.company}</label>
                <input type="text" id="companyName" placeholder="Acme Inc." />
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="userEmail">{t.booking.form.email} *</label>
                <input type="email" id="userEmail" placeholder="john@company.com" required />
              </div>
              <div class="form-group">
                <label for="userPhone">{t.booking.form.phone}</label>
                <input type="tel" id="userPhone" placeholder="+44 123 456 7890" />
              </div>
            </div>

            <div class="form-group">
              <label>{t.booking.form.contactMethodLabel} *</label>
              <div class="contact-methods" id="contactMethodGroup">
                <button type="button" class="method-btn" data-method="Zoom">
                  <i class="fas fa-video"></i> {t.booking.contactMethods.zoom}
                </button>
                <button type="button" class="method-btn" data-method="Google Meet">
                  <i class="fab fa-google"></i> {t.booking.contactMethods.googleMeet}
                </button>
                <button type="button" class="method-btn" data-method="Microsoft Teams">
                  <i class="fab fa-microsoft"></i> {t.booking.contactMethods.teams}
                </button>
                <button type="button" class="method-btn" data-method="Phone call">
                  <i class="fas fa-phone"></i> {t.booking.contactMethods.phone}
                </button>
              </div>
              <input type="hidden" id="contactMethod" />
            </div>

            <div class="form-group">
              <label for="extraInfo">{t.booking.form.extraInfoLabel}</label>
              <textarea id="extraInfo" rows="3" placeholder={t.booking.form.extraInfoPlaceholder}></textarea>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="booking-actions">
            <button type="button" class="btn-reset" id="clearBtn">
              <i class="fas fa-redo"></i> {t.booking.buttons.reset}
            </button>
            <button type="button" class="btn-confirm" id="confirmBtn" disabled>
              <i class="fas fa-check"></i> {t.booking.buttons.confirm}
            </button>
          </div>

          <!-- Status Message -->
          <div class="booking-message" id="summaryMessage"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Translations available globally for the booking modal -->
<script is:inline define:vars={{ translations: t.booking }}>
  window.bookingTranslations = translations;
</script>

<!-- Booking modal logic - loaded deferred to reduce main-thread blocking -->
<script is:inline src="/scripts/booking-modal-deferred.js" defer></script>

<style is:global>
  /* ========================================
     CLEAN BOOKING MODAL STYLES
     ======================================== */

  .booking-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(8px);
    display: none;
    align-items: center;
    justify-content: center;
    padding: 20px;
    z-index: 10000;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .booking-overlay.active {
    display: flex;
    opacity: 1;
  }

  .booking-modal {
    width: 100%;
    max-width: 1100px;
    max-height: 90vh;
    background: linear-gradient(180deg, #1a1a2e 0%, #16162a 100%);
    border-radius: 24px;
    border: 1px solid rgba(99, 102, 241, 0.2);
    overflow-y: auto;
    position: relative;
    animation: modalSlideIn 0.4s ease;
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Close Button */
  .booking-close {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.05);
    color: #9ca3af;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    z-index: 10;
  }

  .booking-close:hover {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.3);
    color: #ef4444;
    transform: rotate(90deg);
  }

  /* Modal Header */
  .booking-modal-header {
    padding: 32px 40px 24px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    text-align: center;
  }

  .booking-modal-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #fff;
    margin: 0 0 8px;
    letter-spacing: -0.02em;
  }

  .booking-modal-subtitle {
    font-size: 0.95rem;
    color: #9ca3af;
    margin: 0 0 16px;
  }

  .booking-duration-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.25);
    border-radius: 100px;
    font-size: 0.85rem;
    color: #a5b4fc;
  }

  .booking-duration-badge i {
    font-size: 0.9rem;
  }

  /* Main Content Layout */
  .booking-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
  }

  @media (max-width: 900px) {
    .booking-content {
      grid-template-columns: 1fr;
    }
  }

  .booking-left {
    padding: 24px 32px;
    border-right: 1px solid rgba(255, 255, 255, 0.06);
  }

  .booking-right {
    padding: 24px 32px;
    background: rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 900px) {
    .booking-left {
      border-right: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }
  }

  /* Section Styling */
  .booking-section {
    margin-bottom: 24px;
  }

  .booking-section:last-child {
    margin-bottom: 0;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .section-number {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    color: #fff;
    font-size: 0.85rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .section-title {
    font-size: 0.95rem;
    font-weight: 600;
    color: #e5e7eb;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Calendar Container */
  .calendar-container {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 16px;
    padding: 20px;
  }

  .calendar-nav-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 16px;
  }

  .cal-nav-btn {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: transparent;
    color: #9ca3af;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .cal-nav-btn:hover {
    background: rgba(99, 102, 241, 0.1);
    border-color: rgba(99, 102, 241, 0.3);
    color: #a5b4fc;
  }

  .calendar-month {
    font-size: 1.1rem;
    font-weight: 600;
    color: #fff;
  }

  .calendar-weekdays {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
    margin-bottom: 8px;
  }

  .calendar-weekdays span {
    text-align: center;
    font-size: 0.75rem;
    font-weight: 500;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 8px 0;
  }

  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
  }

  .calendar-day {
    aspect-ratio: 1;
    border-radius: 10px;
    border: 2px solid transparent;
    background: transparent;
    color: #d1d5db;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .calendar-day:hover:not(.calendar-day--empty) {
    background: rgba(99, 102, 241, 0.1);
    border-color: rgba(99, 102, 241, 0.3);
    color: #fff;
  }

  .calendar-day--empty {
    color: #4b5563;
    cursor: default;
  }

  .calendar-day--today {
    background: rgba(251, 191, 36, 0.1);
    border-color: rgba(251, 191, 36, 0.4);
    color: #fbbf24;
  }

  .calendar-day--selected {
    background: linear-gradient(135deg, #6366f1, #8b5cf6) !important;
    border-color: #a5b4fc !important;
    color: #fff !important;
    font-weight: 600;
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
  }

  /* Timezone Picker */
  .timezone-picker {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    margin-bottom: 16px;
  }

  .timezone-picker i {
    color: #6b7280;
    font-size: 0.9rem;
  }

  .timezone-picker .timezone-select {
    flex: 1;
    background: transparent;
    border: none;
    color: #d1d5db;
    font-size: 0.9rem;
    outline: none;
    cursor: pointer;
  }

  .timezone-picker .timezone-select option {
    background: #1a1a2e;
    color: #d1d5db;
  }

  /* Time Slots */
  .time-slots {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 8px;
    max-height: 200px;
    overflow-y: auto;
    padding-right: 8px;
  }

  .time-slots::-webkit-scrollbar {
    width: 4px;
  }

  .time-slots::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.02);
    border-radius: 4px;
  }

  .time-slots::-webkit-scrollbar-thumb {
    background: rgba(99, 102, 241, 0.3);
    border-radius: 4px;
  }

  .slot-btn {
    padding: 12px 8px;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.02);
    color: #d1d5db;
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .slot-btn:hover {
    background: rgba(99, 102, 241, 0.1);
    border-color: rgba(99, 102, 241, 0.3);
    color: #fff;
  }

  .slot-btn--selected {
    background: linear-gradient(135deg, #6366f1, #8b5cf6) !important;
    border-color: #a5b4fc !important;
    color: #fff !important;
    font-weight: 600;
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
  }

  @media (max-width: 600px) {
    .time-slots {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Selection Summary */
  .selection-summary {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    background: rgba(99, 102, 241, 0.08);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 14px;
    margin-bottom: 20px;
  }

  .summary-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 1.2rem;
  }

  .summary-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .summary-main {
    font-size: 1rem;
    font-weight: 600;
    color: #fff;
  }

  .summary-sub {
    font-size: 0.85rem;
    color: #9ca3af;
  }

  /* Form Styles */
  .booking-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  @media (max-width: 600px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .form-group label {
    font-size: 0.8rem;
    font-weight: 500;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .form-group input,
  .form-group textarea {
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: #fff;
    font-size: 0.95rem;
    transition: all 0.2s ease;
    outline: none;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: #6b7280;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    border-color: rgba(99, 102, 241, 0.5);
    background: rgba(99, 102, 241, 0.05);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 80px;
  }

  /* Contact Methods */
  .contact-methods {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 8px;
  }

  .method-btn {
    padding: 12px 16px;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.02);
    color: #d1d5db;
    font-size: 0.85rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s ease;
  }

  .method-btn i {
    font-size: 0.9rem;
    opacity: 0.7;
  }

  .method-btn:hover {
    background: rgba(99, 102, 241, 0.1);
    border-color: rgba(99, 102, 241, 0.3);
  }

  .method-btn.selected {
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    border-color: transparent;
    color: #fff;
  }

  .method-btn.selected i {
    opacity: 1;
  }

  /* Action Buttons */
  .booking-actions {
    display: flex;
    gap: 12px;
    margin-top: 20px;
  }

  .btn-reset {
    flex: 1;
    padding: 14px 20px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: transparent;
    color: #9ca3af;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.2s ease;
  }

  .btn-reset:hover {
    background: rgba(255, 255, 255, 0.05);
    color: #fff;
  }

  .btn-confirm {
    flex: 2;
    padding: 14px 24px;
    border-radius: 12px;
    border: none;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    color: #fff;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.2s ease;
    box-shadow: 0 4px 16px rgba(99, 102, 241, 0.3);
  }

  .btn-confirm:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(99, 102, 241, 0.4);
  }

  .btn-confirm:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  /* Status Message */
  .booking-message {
    margin-top: 16px;
    padding: 12px 16px;
    border-radius: 10px;
    font-size: 0.9rem;
    line-height: 1.5;
    display: none;
  }

  .booking-message.visible {
    display: block;
  }

  .booking-message.error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #fca5a5;
  }

  .booking-message.success {
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    color: #86efac;
  }

  .booking-message.info {
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.3);
    color: #a5b4fc;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .booking-overlay {
      padding: 0;
      align-items: flex-start;
    }

    .booking-modal {
      max-height: 100vh;
      min-height: 100vh;
      border-radius: 0;
      margin-top: 0;
      padding-top: env(safe-area-inset-top, 20px);
    }

    .booking-modal-header {
      padding: 60px 20px 20px; /* Extra top padding for close button */
    }

    .booking-modal-title {
      font-size: 1.5rem;
    }

    .booking-left,
    .booking-right {
      padding: 20px;
    }

    .calendar-container {
      padding: 16px;
    }

    .form-group input,
    .form-group textarea {
      font-size: 16px; /* Prevent iOS zoom */
    }

    .booking-close {
      position: fixed;
      top: calc(env(safe-area-inset-top, 10px) + 10px);
      right: 16px;
      width: 44px;
      height: 44px;
      background: rgba(0, 0, 0, 0.7);
      border: 1px solid rgba(255, 255, 255, 0.2);
      z-index: 10001;
    }

    .booking-close:hover {
      background: rgba(239, 68, 68, 0.8);
    }
  }
</style>

<!-- Booking modal logic moved to /scripts/booking-modal-deferred.js for better main-thread performance -->
