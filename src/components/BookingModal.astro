---
// BookingModal - Beautiful calendar booking widget with Microsoft Graph integration
import { getLocaleFromUrl, getTranslations } from '../i18n';

const currentPath = Astro.url.pathname;
const currentLocale = getLocaleFromUrl(currentPath);
const t = getTranslations(currentLocale);
---

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

<div id="bookingModalOverlay" class="booking-modal-overlay">
  <div class="booking-modal-wrapper">
    <button class="booking-modal-close" id="bookingModalClose" aria-label="Close booking modal">
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 5L5 15M5 5L15 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>

    <div class="booking-widget">
      <div class="booking-inner">
        <!-- LEFT: Calendar -->
        <div>
          <div class="booking-header">
            <div class="booking-title-group">
              <div class="booking-title">
                {t.booking.title}
              </div>
              <div class="booking-title-pill">
                <span class="booking-title-pill-dot"></span>
                {t.booking.duration}
              </div>
              <div class="booking-subtitle">
                {t.booking.subtitle}
              </div>
            </div>
            <div class="booking-steps">
              <div class="step-chip step-chip--active"><span>1</span>{t.booking.step1}</div>
              <div class="step-chip"><span>2</span>{t.booking.step2}</div>
              <div class="step-chip"><span>3</span>{t.booking.step3}</div>
            </div>
          </div>

          <div class="calendar-card">
            <div class="calendar-header">
              <div class="calendar-current">
                <span>{t.booking.availability}</span>
                <span id="calendarMonthLabel">Month 2025</span>
              </div>
              <div class="calendar-nav">
                <button type="button" id="prevMonthBtn" aria-label="Previous month">
                  <!-- left chevron -->
                  <svg viewBox="0 0 20 20" fill="none">
                    <path d="M12.5 4.5L8 10l4.5 5.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
                <button type="button" id="nextMonthBtn" aria-label="Next month">
                  <!-- right chevron -->
                  <svg viewBox="0 0 20 20" fill="none">
                    <path d="M7.5 4.5 12 10l-4.5 5.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
              </div>
            </div>

            <div class="calendar-weekdays">
              <span>{t.booking.weekdays.mon}</span>
              <span>{t.booking.weekdays.tue}</span>
              <span>{t.booking.weekdays.wed}</span>
              <span>{t.booking.weekdays.thu}</span>
              <span>{t.booking.weekdays.fri}</span>
              <span>{t.booking.weekdays.sat}</span>
              <span>{t.booking.weekdays.sun}</span>
            </div>
            <div class="calendar-grid" id="calendarGrid">
              <!-- days injected by JS -->
            </div>

            <div class="calendar-footer">
              <div class="calendar-footer-legend">
                <span class="legend-pill">
                  <span class="legend-dot legend-dot--selected"></span>
                  {t.booking.legend.selected}
                </span>
                <span class="legend-pill">
                  <span class="legend-dot"></span>
                  {t.booking.legend.available}
                </span>
              </div>
              <div class="calendar-footer-date">
                <span id="selectedDateLabel">{t.booking.noDateSelected}</span>
              </div>
            </div>
          </div>

          <!-- Time slots under calendar -->
          <div class="slots-card">
            <div class="slots-header">
              <span>{t.booking.availableSlots}</span>
              <span class="slots-duration">
                {t.booking.approxDuration}
              </span>
            </div>
            <div class="slots-scroll" id="slotsContainer">
              <!-- slots injected by JS -->
            </div>
          </div>
        </div>

        <!-- RIGHT: Summary + details form -->
        <div class="booking-right">
          <div class="timezone-row">
            <div class="timezone-label">
              {t.booking.timezone}
            </div>
            <div class="timezone-select-wrap">
              <select class="timezone-select" id="timezoneSelect">
                <option value="local">{t.booking.timezones.local}</option>
                <option value="Europe/Madrid">{t.booking.timezones.madrid}</option>
                <option value="Europe/London">{t.booking.timezones.london}</option>
                <option value="America/New_York">{t.booking.timezones.newYork}</option>
                <option value="America/Los_Angeles">{t.booking.timezones.losAngeles}</option>
              </select>
            </div>
          </div>

          <div class="summary-card">
            <div class="summary-inner">
              <!-- Your Selection Header -->
              <div class="summary-header">
                <div class="summary-label">
                  <i class="fas fa-calendar-check"></i>
                  {t.booking.yourSelection}
                </div>
                <div class="summary-status" id="summaryStatus">
                  <span class="summary-status-dot"></span>
                  {t.booking.status.tentative}
                </div>
              </div>

              <!-- Selection Display Box -->
              <div class="selection-display">
                <div class="selection-icon">
                  <i class="fas fa-clock"></i>
                </div>
                <div class="selection-details">
                  <div class="summary-value" id="summaryMain">
                    {t.booking.chooseDateAndTime}
                  </div>
                  <div class="summary-secondary" id="summarySecondary">
                    {t.booking.videoMeetingDuration}
                  </div>
                </div>
              </div>

              <!-- Meeting Info -->
              <div class="meeting-info">
                <i class="fas fa-info-circle"></i>
                <span>{t.booking.calendarInviteMessage}</span>
              </div>

              <div class="booking-form-divider"></div>

              <div class="booking-form-label booking-form-label--main">
                <i class="fas fa-user"></i>
                {t.booking.yourDetails}
              </div>
              <div class="booking-form">
                <div class="booking-form-row">
                  <input type="text" id="userName" class="booking-input" placeholder={t.booking.form.name} />
                  <input type="text" id="companyName" class="booking-input" placeholder={t.booking.form.company} />
                </div>
                <div class="booking-form-row">
                  <input type="email" id="userEmail" class="booking-input" placeholder={t.booking.form.email} />
                  <input type="tel" id="userPhone" class="booking-input" placeholder={t.booking.form.phone} />
                </div>
                <div class="booking-form-row">
                  <div class="contact-method-container">
                    <div class="booking-form-label">{t.booking.form.contactMethodLabel}</div>
                    <div class="contact-method-group" id="contactMethodGroup">
                      <button type="button" class="contact-method-chip" data-method="Zoom">
                        <span class="contact-method-icon">Z</span>
                        <span>{t.booking.contactMethods.zoom}</span>
                      </button>
                      <button type="button" class="contact-method-chip" data-method="Google Meet">
                        <span class="contact-method-icon">GM</span>
                        <span>{t.booking.contactMethods.googleMeet}</span>
                      </button>
                      <button type="button" class="contact-method-chip" data-method="Microsoft Teams">
                        <span class="contact-method-icon">T</span>
                        <span>{t.booking.contactMethods.teams}</span>
                      </button>
                      <button type="button" class="contact-method-chip" data-method="Phone call">
                        <span class="contact-method-icon">P</span>
                        <span>{t.booking.contactMethods.phone}</span>
                      </button>
                      <button type="button" class="contact-method-chip" data-method="Other">
                        <span class="contact-method-icon">⋯</span>
                        <span>{t.booking.contactMethods.other}</span>
                      </button>
                    </div>
                    <input type="hidden" id="contactMethod" />
                  </div>
                </div>
                <div>
                  <div class="booking-form-label">{t.booking.form.extraInfoLabel}</div>
                  <textarea id="extraInfo" class="booking-textarea" placeholder={t.booking.form.extraInfoPlaceholder}></textarea>
                </div>
              </div>

              <div class="summary-actions">
                <button type="button" class="btn btn-secondary" id="clearBtn">
                  {t.booking.buttons.reset}
                </button>
                <button type="button" class="btn btn-primary" id="confirmBtn" disabled>
                  {t.booking.buttons.confirm}
                </button>
              </div>

              <div class="summary-message" id="summaryMessage"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script is:inline define:vars={{ translations: t.booking }}>
  // Make translations available globally for the booking modal
  window.bookingTranslations = translations;
</script>

<style is:global>
  :root {
    /* Main backgrounds - exact website colors */
    --bg: #000000;
    --bg-light: #121212;
    --bg-card: #181818;
    --bg-elevated: #282828;

    /* Accent gradients */
    --accent-gradient: linear-gradient(135deg, #6366f1, #818cf8);
    --accent-purple: linear-gradient(135deg, #8b5cf6, #7c3aed);
    --accent: #6366f1;
    --accent-strong: #818cf8;
    --accent-yellow: #FBBF24;

    /* Borders */
    --border-subtle: #282828;
    --border-medium: #333;

    /* Text colors */
    --text-main: #ffffff;
    --text-light: #d1d5db;
    --text-muted: #9ca3af;

    /* Status colors */
    --success: #22c55e;
    --danger: #ef4444;

    /* Border radius */
    --radius-xl: 1.5rem;
    --radius-lg: 1rem;
    --radius-pill: 999px;

    /* Shadows with glow */
    --shadow-glow: 0 0 40px rgba(99, 102, 241, 0.3);
    --shadow-glow-strong: 0 0 60px rgba(99, 102, 241, 0.5);

    /* Transitions */
    --transition-fast: 200ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-smooth: 300ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-bounce: 400ms cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  /* Keyframe Animations */
  @keyframes pulseGlow {
    0%, 100% {
      box-shadow: 0 8px 30px rgba(99, 102, 241, 0.6),
                  0 0 40px rgba(99, 102, 241, 0.4),
                  0 0 0 0 rgba(99, 102, 241, 0.7);
    }
    50% {
      box-shadow: 0 8px 35px rgba(99, 102, 241, 0.8),
                  0 0 60px rgba(99, 102, 241, 0.7),
                  0 0 0 10px rgba(99, 102, 241, 0);
    }
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes shimmer {
    0% {
      background-position: -1000px 0;
    }
    100% {
      background-position: 1000px 0;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-4px);
    }
  }

  @keyframes scaleIn {
    from {
      transform: scale(0.8);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  * {
    box-sizing: border-box;
  }

  /* Modal Overlay */
  .booking-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 0;
    min-height: 100vh;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 24px;
    font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    background: radial-gradient(circle at top, rgba(99, 102, 241, 0.15) 0%, #000000 50%);
    color: var(--text-main);
    z-index: 10000;
    opacity: 0;
    transition: opacity var(--transition-smooth);
    backdrop-filter: blur(10px);
  }

  .booking-modal-overlay.active {
    display: flex;
    opacity: 1;
  }

  .booking-modal-wrapper {
    position: relative;
    width: 100%;
    max-width: 1400px;
    max-height: 80vh;
    animation: slideInUp 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  @media (max-width: 768px) {
    .booking-modal-wrapper {
      max-width: 100%;
    }
  }

  .booking-modal-close {
    position: absolute;
    top: -12px;
    right: -12px;
    background: var(--bg-elevated);
    border: 2px solid var(--border-medium);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--transition-smooth);
    color: var(--text-light);
    font-size: 1.25rem;
    z-index: 10001;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }

  .booking-modal-close:hover {
    background: var(--accent-gradient);
    border-color: transparent;
    transform: rotate(90deg) scale(1.1);
    color: white;
    box-shadow: var(--shadow-glow);
  }

  .booking-widget {
    width: 100%;
    max-width: 1400px;
    background: rgba(24, 24, 24, 0.8);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 2rem;
    padding: 24px;
    border: 1px solid rgba(99, 102, 241, 0.2);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8),
                0 0 80px rgba(99, 102, 241, 0.15),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
  }

  /* Subtle glow decoration */
  .booking-widget::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top left, rgba(99, 102, 241, 0.1), transparent 50%),
                radial-gradient(circle at bottom right, rgba(139, 92, 246, 0.08), transparent 50%);
    opacity: 1;
    pointer-events: none;
  }

  .booking-inner {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 1fr);
    gap: 28px;
  }

  @media (max-width: 840px) {
    .booking-inner {
      grid-template-columns: minmax(0, 1fr);
    }
  }

  .booking-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 18px;
    gap: 12px;
    flex-wrap: wrap;
  }

  .booking-title-group {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .booking-title {
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .booking-title-pill {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.7rem;
    padding: 4px 10px;
    border-radius: 999px;
    border: 1px solid var(--border-medium);
    background: var(--bg-elevated);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-light);
  }

  .booking-title-pill-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--accent-gradient);
    box-shadow: 0 0 8px rgba(99, 102, 241, 0.5);
  }

  .booking-subtitle {
    font-size: 0.86rem;
    color: var(--text-muted);
  }

  .booking-steps {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
    font-size: 0.72rem;
    text-transform: uppercase;
    letter-spacing: 0.09em;
  }

  .step-chip {
    padding: 6px 10px;
    border-radius: var(--radius-pill);
    border: 1px solid var(--border-subtle);
    background: var(--bg-light);
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: var(--text-muted);
    transition: all var(--transition-fast);
  }

  .step-chip span {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 16px;
    height: 16px;
    border-radius: 999px;
    font-size: 0.64rem;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
  }

  .step-chip--active {
    border-color: var(--accent);
    background: var(--bg-elevated);
    color: var(--text-main);
    box-shadow: 0 0 20px rgba(99, 102, 241, 0.3);
    position: relative;
    overflow: hidden;
  }

  .step-chip--active::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.15), transparent);
    animation: shimmer 3s infinite;
  }

  .step-chip--active span {
    border-color: transparent;
    background: var(--accent-gradient);
    color: white;
    box-shadow: 0 0 10px rgba(99, 102, 241, 0.5);
  }

  /* Left: calendar */
  .calendar-card {
    background: rgba(24, 24, 24, 0.6);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: var(--radius-xl);
    border: 1px solid rgba(99, 102, 241, 0.15);
    padding: 16px 18px 18px;
    display: flex;
    flex-direction: column;
    gap: 14px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.03);
  }

  .calendar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
  }

  .calendar-current {
    display: flex;
    flex-direction: column;
  }

  .calendar-current span:first-child {
    font-size: 0.76rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--text-muted);
  }

  .calendar-current span:last-child {
    font-size: 1.2rem;
    font-weight: 600;
  }

  .calendar-nav {
    display: inline-flex;
    gap: 6px;
    background: var(--bg-light);
    padding: 3px;
    border-radius: 999px;
    border: 1px solid var(--border-subtle);
  }

  .calendar-nav button {
    border: 0;
    background: transparent;
    color: var(--text-muted);
    padding: 7px 9px;
    border-radius: 999px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    transition: all var(--transition-fast);
  }

  .calendar-nav button:hover {
    background: var(--bg-elevated);
    color: var(--text-light);
    transform: translateY(-1px);
    box-shadow: 0 0 15px rgba(99, 102, 241, 0.2);
  }

  .calendar-nav button svg {
    width: 15px;
    height: 15px;
  }

  .calendar-weekdays {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--text-muted);
    gap: 4px;
  }

  .calendar-weekdays span {
    text-align: center;
    padding: 4px 0;
  }

  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
    font-size: 0.85rem;
  }

  .calendar-day {
    position: relative;
    height: 42px;
    border-radius: 12px;
    border: 2px solid transparent;
    background: transparent;
    color: var(--text-light);
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-fast);
    overflow: visible;
    font-weight: 600;
    font-size: 0.9rem;
    animation: scaleIn 0.3s ease-out backwards;
  }

  /* Staggered animation for calendar days */
  .calendar-day:nth-child(1) { animation-delay: 0.02s; }
  .calendar-day:nth-child(2) { animation-delay: 0.04s; }
  .calendar-day:nth-child(3) { animation-delay: 0.06s; }
  .calendar-day:nth-child(4) { animation-delay: 0.08s; }
  .calendar-day:nth-child(5) { animation-delay: 0.10s; }
  .calendar-day:nth-child(6) { animation-delay: 0.12s; }
  .calendar-day:nth-child(7) { animation-delay: 0.14s; }
  .calendar-day:nth-child(8) { animation-delay: 0.03s; }
  .calendar-day:nth-child(9) { animation-delay: 0.05s; }
  .calendar-day:nth-child(10) { animation-delay: 0.07s; }
  .calendar-day:nth-child(11) { animation-delay: 0.09s; }
  .calendar-day:nth-child(12) { animation-delay: 0.11s; }
  .calendar-day:nth-child(13) { animation-delay: 0.13s; }
  .calendar-day:nth-child(14) { animation-delay: 0.15s; }

  .calendar-day--empty {
    cursor: default;
    background: transparent;
    color: var(--text-muted);
    opacity: 0.3;
    font-weight: 400;
  }

  .calendar-day--today {
    background: rgba(251, 191, 36, 0.1);
    border-color: var(--accent-yellow);
    color: var(--accent-yellow);
    box-shadow: 0 0 15px rgba(251, 191, 36, 0.25);
  }

  .calendar-day span {
    position: relative;
    z-index: 2;
  }

  .calendar-day::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.15), rgba(139, 92, 246, 0.1));
    opacity: 0;
    transition: opacity var(--transition-fast);
    z-index: 0;
  }

  .calendar-day:not(.calendar-day--empty):hover {
    transform: scale(1.05) translateY(-2px);
    border-color: var(--accent);
    box-shadow: 0 6px 25px rgba(99, 102, 241, 0.5), 0 0 30px rgba(99, 102, 241, 0.3);
    color: white;
  }

  .calendar-day:not(.calendar-day--empty):hover::before {
    opacity: 1;
  }

  .calendar-day--selected {
    background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%) !important;
    border: 3px solid #a5b4fc !important;
    color: white !important;
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.3),
                0 8px 30px rgba(99, 102, 241, 0.6),
                0 0 40px rgba(99, 102, 241, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.3) !important;
    font-weight: 700 !important;
    transform: scale(1.15) !important;
    z-index: 10;
    animation: pulseGlow 2s ease-in-out infinite !important;
    position: relative;
    opacity: 1 !important;
  }

  .calendar-day--selected::after {
    content: "";
    position: absolute;
    inset: -3px;
    border-radius: inherit;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.4), rgba(139, 92, 246, 0.3));
    filter: blur(8px);
    z-index: -1;
    opacity: 0.8;
  }

  .calendar-day--selected::before {
    opacity: 0 !important;
  }

  /* Absolutely ensure selected state is visible */
  .calendar-grid .calendar-day.calendar-day--selected {
    background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%) !important;
    border: 3px solid #a5b4fc !important;
    transform: scale(1.15) !important;
