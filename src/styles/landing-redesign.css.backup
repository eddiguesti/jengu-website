/* ========================================
   LANDING PAGE REDESIGN - MOBILE FIRST
   Focus: Touch targets, readability, performance
   Following iOS/Android UX best practices
   ======================================== */

/* Hero Enhancements */
.hero-badge {
  display: inline-flex !important;
  align-items: center;
  gap: 0.5rem;
  background: linear-gradient(135deg, rgba(6, 182, 212, 0.15), rgba(30, 64, 175, 0.15)) !important;
  padding: 0.75rem 1.5rem !important;
  font-size: 0.95rem !important;
  backdrop-filter: blur(10px);
}

.hero-badge i {
  font-size: 1.1rem;
  color: var(--secondary-brand);
}

.hero-description {
  font-size: 1.2rem !important;
  line-height: 1.7 !important;
  color: var(--text-secondary) !important;
  margin-bottom: 2rem !important;
}

/* Mini Stats in Hero */
.hero-stats-mini {
  display: flex;
  gap: 2rem;
  margin: 2rem 0;
  padding: 1.5rem 0;
  border-top: 1px solid rgba(6, 182, 212, 0.2);
  border-bottom: 1px solid rgba(6, 182, 212, 0.2);
}

.mini-stat {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.mini-stat strong {
  font-size: 1.5rem;
  font-weight: 900;
  background: var(--gradient-brand);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.mini-stat span {
  font-size: 0.85rem;
  color: var(--text-secondary);
  font-weight: 500;
}

/* Better CTA Buttons */
.btn-large {
  padding: 1.1rem 2.5rem !important;
  font-size: 1.05rem !important;
  font-weight: 600 !important;
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  transition: all 0.3s ease;
}

.btn-large i {
  font-size: 1.1rem;
  transition: transform 0.3s ease;
}

.btn-primary:hover i {
  transform: translateX(5px);
}

.btn-secondary:hover i {
  transform: scale(1.1);
}

.hero-trust {
  margin-top: 1.5rem;
  font-size: 0.95rem;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.hero-trust i {
  color: var(--success);
  font-size: 1.1rem;
}

/* Section Badges */
.section-badge {
  display: inline-flex !important;
  align-items: center !important;
  gap: 0.5rem !important;
  background: rgba(6, 182, 212, 0.1) !important;
  padding: 0.6rem 1.5rem !important;
  font-size: 0.9rem !important;
}

.section-badge i {
  color: var(--secondary-brand);
}

/* New Feature Cards Grid */
.features-grid-new {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0;
  width: 100%;
}

/* Desktop: ensure cards are centered and properly aligned */
@media (min-width: 1025px) {
  .features-grid-new {
    padding: 0 2rem;
    justify-items: center;
  }

  /* Ensure 2-column layout on medium desktop screens */
  @media (max-width: 1400px) {
    .features-grid-new {
      grid-template-columns: repeat(2, minmax(350px, 500px));
    }
  }

  /* 3-column layout on larger screens */
  @media (min-width: 1401px) {
    .features-grid-new {
      grid-template-columns: repeat(3, minmax(350px, 380px));
    }
  }
}

.feature-card-new {
  background: var(--bg-card);
  border: 1px solid var(--border-light);
  border-radius: 16px;
  padding: 2rem;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
  position: relative;
  overflow: hidden;
}

.feature-card-new::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--gradient-brand);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.feature-card-new:hover {
  border-color: var(--secondary-brand);
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(6, 182, 212, 0.15);
}

.feature-card-new:hover::before {
  transform: scaleX(1);
}

.feature-header {
  display: flex;
  align-items: flex-start;
  gap: 1.25rem;
}

.feature-icon-new {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, rgba(6, 182, 212, 0.15), rgba(30, 64, 175, 0.15));
  border: 2px solid rgba(6, 182, 212, 0.3);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: var(--secondary-brand);
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.feature-card-new:hover .feature-icon-new {
  background: linear-gradient(135deg, rgba(6, 182, 212, 0.25), rgba(30, 64, 175, 0.25));
  transform: scale(1.05) rotate(5deg);
}

.feature-header h3 {
  margin: 0;
  font-size: 1.35rem;
  color: var(--text-primary);
  line-height: 1.3;
  font-weight: 700;
}

.feature-card-new > p {
  color: var(--text-secondary);
  line-height: 1.7;
  margin: 0;
  font-size: 1rem;
}

.feature-benefits {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.feature-benefits li {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  color: var(--text-secondary);
  font-size: 0.95rem;
}

.feature-benefits i {
  color: var(--success);
  font-size: 0.9rem;
  flex-shrink: 0;
}

.feature-learn-more {
  background: transparent;
  border: 2px solid var(--secondary-brand);
  color: var(--secondary-brand);
  padding: 0.85rem 1.75rem;
  border-radius: 8px;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  margin-top: auto;
  font-family: inherit;
}

.feature-learn-more:hover {
  background: var(--gradient-brand);
  color: white;
  border-color: transparent;
  transform: translateX(5px);
  box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
}

.feature-learn-more i {
  font-size: 0.9rem;
  transition: transform 0.3s ease;
}

.feature-learn-more:hover i {
  transform: translateX(3px);
}

/* Mobile Optimizations */
@media (max-width: 1024px) {
  .hero-stats-mini {
    gap: 1.5rem;
  }

  .mini-stat strong {
    font-size: 1.3rem;
  }

  .features-grid-new {
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding: 0 1.5rem;
  }

  .feature-card-new {
    padding: 1.75rem;
  }
}

@media (max-width: 768px) {
  /* Mobile hero: compact and focused */
  .hero-home {
    min-height: auto !important;
    padding: 2rem 0 3rem 0 !important;
  }

  .hero-container {
    flex-direction: column !important;
    gap: 0 !important;
    min-height: auto !important;
  }

  .hero-content {
    max-width: 100% !important;
    padding: 0 1.5rem !important;
    text-align: center !important;
  }

  .hero-badge {
    margin-bottom: 1rem !important;
  }

  .hero-content h1 {
    font-size: 2rem !important;
    line-height: 1.2 !important;
    margin-bottom: 1rem !important;
  }

  .hero-description {
    font-size: 1rem !important;
    line-height: 1.6 !important;
    margin-bottom: 1.5rem !important;
  }

  .hero-stats-mini {
    flex-wrap: wrap;
    gap: 0.75rem;
    padding: 1rem 0;
    margin: 1rem 0 !important;
    justify-content: center;
  }

  .mini-stat {
    flex: 1;
    min-width: 90px;
  }

  .mini-stat strong {
    font-size: 1.2rem;
  }

  .mini-stat span {
    font-size: 0.8rem;
  }

  /* Mobile-optimized CTAs - 44px minimum touch target (Apple HIG) */
  .btn-large {
    width: 100%;
    justify-content: center;
    padding: 1rem 2rem !important;
    font-size: 1rem !important;
    min-height: 54px; /* 54px for comfortable tapping */
  }

  .hero-cta-group {
    flex-direction: column;
    gap: 0.75rem !important;
    margin-bottom: 1rem !important;
  }

  .hero-trust {
    font-size: 0.85rem;
    text-align: center;
    flex-direction: column;
    gap: 0.25rem;
    margin-top: 0.5rem !important;
  }

  .feature-icon-new {
    width: 50px;
    height: 50px;
    font-size: 1.3rem;
  }

  .feature-header h3 {
    font-size: 1.25rem; /* Slightly larger for mobile readability */
  }

  .feature-card-new > p {
    font-size: 1rem; /* Keep at 1rem for mobile readability */
    line-height: 1.6;
  }

  .feature-benefits {
    gap: 0.65rem;
  }

  .feature-benefits li {
    font-size: 0.95rem; /* Slightly larger for mobile */
  }

  /* Mobile-optimized Learn More button - 48px minimum touch target */
  .feature-learn-more {
    padding: 1rem 1.75rem !important;
    font-size: 1.05rem !important;
    min-height: 50px; /* Comfortable touch target */
    width: 100%; /* Full width on mobile for easier tapping */
  }

  .features-grid-new {
    padding: 0 1rem;
  }

  .feature-card-new {
    padding: 1.5rem;
  }
}

/* Extra small phones (< 375px) */
@media (max-width: 374px) {
  .hero-badge {
    padding: 0.6rem 1.2rem !important;
    font-size: 0.85rem !important;
  }

  .mini-stat strong {
    font-size: 1.1rem;
  }

  .btn-large {
    padding: 1.1rem 1.5rem !important;
    font-size: 1rem !important;
  }

  .feature-header h3 {
    font-size: 1.15rem;
  }

  .feature-card-new {
    padding: 1.25rem;
  }
}
